<!-- Modal para Views do Banco -->
<div id="viewsModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
    <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-medium text-gray-900">üóÑÔ∏è Views no Banco de Dados</h3>
                <button onclick="closeViewsModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div id="viewsContent" class="max-h-96 overflow-y-auto">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

<script>
function refreshFileList() {
    window.location.reload();
}

function listDatabaseViews() {
    const modal = document.getElementById('viewsModal');
    const content = document.getElementById('viewsContent');
    
    content.innerHTML = '<div class="flex justify-center items-center py-8"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div></div>';
    modal.classList.remove('hidden');
    
    fetch('/leads8/view/editor/list_views')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                let html = '<div class="space-y-2">';
                if (data.views && data.views.length > 0) {
                    data.views.forEach(view => {
                        const viewName = Object.values(view)[0]; // Get the view name from the result
                        html += `
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
                                    </svg>
                                    <span class="font-medium text-gray-900">${viewName}</span>
                                </div>
                                <span class="text-xs text-green-600 bg-green-100 px-2 py-1 rounded">Ativa</span>
                            </div>
                        `;
                    });
                } else {
                    html += '<p class="text-gray-600 text-center py-4">Nenhuma view encontrada no banco de dados</p>';
                }
                html += '</div>';
                content.innerHTML = html;
            } else {
                content.innerHTML = `<div class="text-red-600 text-center py-4">Erro: ${data.message}</div>`;
            }
        })
        .catch(error => {
            content.innerHTML = '<div class="text-red-600 text-center py-4">Erro ao carregar views do banco de dados</div>';
            console.error('Error:', error);
        });
}

function closeViewsModal() {
    document.getElementById('viewsModal').classList.add('hidden');
}

// Close modal when clicking outside
document.getElementById('viewsModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeViewsModal();
    }
});
</script>

