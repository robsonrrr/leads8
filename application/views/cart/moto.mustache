                    <i class="bi bi-lightning"></i> Raio-Y
                </a>
                {{/existProducts}}
                <a target="_blank" class="btn btn-info" href="{{CONTAINER}}lead/mail/{{id}}/{{segmentoPOID}}">
                    <i class="bi bi-envelope-open"></i> email
                </a>
                <a target="_blank" class="btn btn-info" href="{{CONTAINER}}lead/print/{{id}}/{{segmentoPOID}}">
                    <i class="bi bi-printer"></i> imprimir
                </a>
                <a target="_blank" class="btn btn-info" href="{{CONTAINER}}lead/export/{{id}}/{{segmentoPOID}}">
                    exportar
                </a>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal" data-lead="{{id}}"
                        {{#existPendencies}}disabled{{/existPendencies}} {{#existProducts}}disabled{{/existProducts}} >
