<style>
.CodeMirror {
    height: 500px;
    border: 2px solid #e5e7eb;
    border-radius: 0.75rem;
    font-size: 14px;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
}
.CodeMirror-focused {
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}
.CodeMirror-gutters {
    background: #f8fafc;
    border-right: 1px solid #e5e7eb;
}
.CodeMirror-linenumber {
    color: #9ca3af;
}
</style>

<script>
let editor;

document.addEventListener('DOMContentLoaded', function() {
    // Initialize CodeMirror with advanced features
    const textarea = document.getElementById('sqlEditor');
    editor = CodeMirror.fromTextArea(textarea, {
        mode: 'text/x-sql',
        theme: 'material',
        lineNumbers: true,
        indentUnit: 4,
        smartIndent: true,
        lineWrapping: true,
        matchBrackets: true,
        autoCloseBrackets: true,
        foldGutter: true,
        gutters: ["CodeMirror-linenumbers", "CodeMirror-foldgutter"],
        extraKeys: {
            "Ctrl-Space": "autocomplete",
            "Ctrl-S": function(cm) {
                saveOnly();
                return false;
            },
            "Ctrl-Shift-S": function(cm) {
                saveAndApply();
                return false;
            },
            "F5": function(cm) {
                testSQL();
                return false;
            },
            "Ctrl-/": "toggleComment"
        },
        hintOptions: {
            tables: {
                "vw_leads_produtos": ["lead_id", "cliente_nome", "produto_modelo", "valor_total_item"],
                "inv": ["id", "modelo", "marca", "fob", "peso"],
                "hist": ["isbn", "quant", "valor_base"],
                "next": ["isbn", "quant", "state"]
            }
        }
    });
    
    // Auto-resize editor
    editor.setSize(null, 500);
    
    // Add loading animation
    setTimeout(() => {
        const wrapper = editor.getWrapperElement();
        wrapper.style.opacity = '0';
        wrapper.style.transform = 'translateY(20px)';
        wrapper.style.transition = 'all 0.5s ease';
        setTimeout(() => {
            wrapper.style.opacity = '1';
            wrapper.style.transform = 'translateY(0)';
        }, 100);
    }, 100);
});

function testSQL() {
    const content = editor.getValue();
    
    if (!content.trim()) {
        showStatus('‚ùå Erro', 'Conte√∫do SQL est√° vazio', 'error');
        return;
    }
    
    showStatus('üß™ Testando...', 'Validando sintaxe SQL...', 'loading');
    
    fetch('/leads8/viewsql/test', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'content=' + encodeURIComponent(content)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showStatus('‚úÖ Sintaxe V√°lida', data.message + (data.view_name ? ` (View: ${data.view_name})` : ''), 'success');
            showNotification(data.message, 'success');
        } else {
            showStatus('‚ùå Erro de Sintaxe', data.message, 'error');
            showNotification(data.message, 'error');
        }
    })
    .catch(error => {
        showStatus('‚ùå Erro', 'Erro ao testar SQL: ' + error.message, 'error');
        showNotification('Erro ao testar SQL', 'error');
        console.error('Error:', error);
    });
}

function saveOnly() {
    document.getElementById('applyChanges').value = '0';
    submitForm();
}

function saveAndApply() {
    if (confirm('‚ö†Ô∏è ATEN√á√ÉO: Isso ir√° recriar a view no banco de dados.\\n\\n‚úÖ Um backup autom√°tico ser√° criado antes da modifica√ß√£o.\\n\\nTem certeza que deseja continuar?')) {
        document.getElementById('applyChanges').value = '1';
        submitForm();
    }
}

function formatSQL() {
    // Simple SQL formatting
    let content = editor.getValue();
    content = content
        .replace(/\\bSELECT\\b/gi, 'SELECT')
        .replace(/\\bFROM\\b/gi, 'FROM')
        .replace(/\\bWHERE\\b/gi, 'WHERE')
        .replace(/\\bJOIN\\b/gi, 'JOIN')
        .replace(/\\bLEFT\\s+JOIN\\b/gi, 'LEFT JOIN')
        .replace(/\\bINNER\\s+JOIN\\b/gi, 'INNER JOIN')
        .replace(/\\bORDER\\s+BY\\b/gi, 'ORDER BY')
        .replace(/\\bGROUP\\s+BY\\b/gi, 'GROUP BY')
        .replace(/\\bHAVING\\b/gi, 'HAVING');
    
    editor.setValue(content);
    showNotification('SQL formatado com sucesso!', 'success');
}

function submitForm() {
    // Update textarea with editor content
    editor.save();
    
    const form = document.getElementById('editorForm');
    const formData = new FormData(form);
    
    showStatus('üíæ Salvando...', 'Processando altera√ß√µes...', 'loading');
    
    fetch('/leads8/viewsql/save', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            let message = 'Arquivo salvo com sucesso!';
            if (data.view_applied) {
                message += ` View '${data.view_name}' foi recriada no banco de dados.`;
            }
            showStatus('‚úÖ Sucesso', message, 'success');
            showNotification(data.message, 'success');
        } else {
            showStatus('‚ùå Erro', data.message, 'error');
            showNotification(data.message, 'error');
        }
    })
    .catch(error => {
        showStatus('‚ùå Erro', 'Erro ao salvar: ' + error.message, 'error');
        showNotification('Erro ao salvar arquivo', 'error');
        console.error('Error:', error);
    });
}

function showStatus(title, message, type) {
    const panel = document.getElementById('statusPanel');
    const icon = document.getElementById('statusIcon');
    const titleEl = document.getElementById('statusTitle');
    const messageEl = document.getElementById('statusMessage');
    
    titleEl.textContent = title;
    messageEl.textContent = message;
    
    // Set icon and colors based on type
    if (type === 'success') {
        icon.innerHTML = '<div class="bg-green-100 p-2 rounded-full"><svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg></div>';
        panel.className = 'bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500 mt-6';
    } else if (type === 'error') {
        icon.innerHTML = '<div class="bg-red-100 p-2 rounded-full"><svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg></div>';
        panel.className = 'bg-white rounded-xl shadow-lg p-6 border-l-4 border-red-500 mt-6';
    } else if (type === 'loading') {
        icon.innerHTML = '<div class="bg-blue-100 p-2 rounded-full"><div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div></div>';
        panel.className = 'bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500 mt-6';
    }
    
    panel.classList.remove('hidden');
    
    // Scroll to status panel
    panel.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
}

function showNotification(message, type = 'info') {
    console.log(`Notification: ${message} (${type})`);
    // TODO: Implement toast notifications if needed
}

// Keyboard shortcuts help
document.addEventListener('keydown', function(e) {
    if (e.ctrlKey && e.key === 's') {
        e.preventDefault();
        if (e.shiftKey) {
            saveAndApply();
        } else {
            saveOnly();
        }
    } else if (e.key === 'F5') {
        e.preventDefault();
        testSQL();
    }
});

// Auto-save functionality (every 30 seconds)
setInterval(() => {
    if (editor && editor.getValue().trim()) {
        localStorage.setItem('sql_editor_backup_{{filename}}', editor.getValue());
    }
}, 30000);

// Restore from auto-save on load
window.addEventListener('load', function() {
    setTimeout(() => {
        const backup = localStorage.getItem('sql_editor_backup_{{filename}}');
        if (backup && backup !== editor.getValue()) {
            if (confirm('üíæ Encontrado backup autom√°tico mais recente. Deseja restaurar?')) {
                editor.setValue(backup);
            }
        }
    }, 1000);
});
</script>
