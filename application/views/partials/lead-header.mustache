<!-- Lead Header -->
<link rel="stylesheet" href="/leads8/css/lead-header.css">

<div class="lead-header">
    <!-- Ícone e Número do Lead -->
    <div class="lead-info">
        <div class="lead-icon">
            <i class="fas fa-sewing-machine"></i>
        </div>
        <div class="lead-number">
            Lead nº: <span class="number">{{id}}</span>
            <div class="btn-group">
                <a href="#" class="btn btn-light btn-sm" title="Anterior">
                    <i class="fas fa-chevron-left"></i>
                </a>
                <a href="#" class="btn btn-light btn-sm" title="Próximo">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
        <div class="lead-order">
            Pedido: <strong>{{pedidoNumero}}</strong>
        </div>
        <div class="lead-client">
            Cliente: <strong>{{Cliente.clienteNome}}</strong>
        </div>
    </div>

    <!-- Ações -->
    <div class="lead-actions">
        <button class="btn btn-light" onclick="refreshLead()">
            <i class="fas fa-sync-alt"></i>
        </button>
        <button class="btn btn-light" onclick="editLead()">
            <i class="fas fa-edit"></i>
        </button>
        <button class="btn btn-light" onclick="copyLead()">
            <i class="fas fa-copy"></i>
        </button>
        <div class="btn-group">
            <button class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown">
                Pedido de Máquinas
                <i class="fas fa-chevron-down"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#"><i class="fas fa-plus"></i> Novo Pedido</a></li>
                <li><a class="dropdown-item" href="#"><i class="fas fa-history"></i> Histórico</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#"><i class="fas fa-cog"></i> Configurações</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Lead Info Grid -->
<div class="lead-info-grid">
    <!-- Data Criado -->
    <div class="lead-info-field">
        <div class="field-label">
            <i class="far fa-calendar-alt field-icon"></i>
            Data Criado
        </div>
        <div class="field-value">
            {{dataEmissaoFormatado}}, {{dataEmissaoDias}} dia(s)
        </div>
    </div>

    <!-- Vendedor/Emissor -->
    <div class="lead-info-field">
        <div class="field-label">
            <i class="fas fa-user-tie field-icon"></i>
            Vendedor / Emissor
        </div>
        <div class="field-value">
            {{Cliente.Gerente.UsuarioNomeCurto}} / {{Vendedor.UsuarioNomeCurto}}
        </div>
    </div>

    <!-- Financeiro -->
    <div class="lead-info-field">
        <div class="field-label">
            <i class="far fa-money-bill-alt field-icon"></i>
            Financeiro
        </div>
        <div class="field-value">
            {{#Financeiro}}
            <span title="limite total">{{limite}}</span> /
            <span title="limite disponível">{{disponivel}}</span> /
            {{#atrasados}}<span class="text-danger">{{atrasados}}</span>{{/atrasados}}
            {{^atrasados}}<span class="text-success">0</span>{{/atrasados}}
            {{/Financeiro}}
        </div>
    </div>

    <!-- Cadastro -->
    <div class="lead-info-field">
        <div class="field-label">
            <i class="fas fa-users-cog field-icon"></i>
            Cadastro
        </div>
        <div class="field-value">
            {{#Cliente}}
            Descontos: {{clienteDesconto}}, {{clienteDescontoMakAutomotive}}, {{clienteDescontoPedido}} |
            Juros: {{clienteJuros}} | Sobretaxa: {{clienteSobretaxa}}
            {{/Cliente}}
        </div>
    </div>

    <!-- Fonte -->
    <div class="lead-info-field">
        <div class="field-label">
            <i class="fab fa-font-awesome-flag field-icon"></i>
            Fonte
            <i class="fas fa-info-circle text-muted" title="0 - desconhecido, 1 - B2B, 2 - B2C, 3 - ML, 4 - B2W, 5 - Shopee, 6 - Magalu, 7 - Viavarejo, 8 - Amazon, 9 - Instagram, 10 - Facebook, 11 - Youtube, 12 - Visita, 13 - Campanha, 14 - Promoção, 15 - Email marketing"></i>
        </div>
        <div class="field-value">
            <input type="text" class="form-control form-control-sm" value="{{leadFonte}}" 
                   data-url="/leads/leads5/lead/update/Leads/{{id}}" 
                   name="leadFonte" id="leadFonte">
        </div>
    </div>

    <!-- Tipo -->
    <div class="lead-info-field">
        <div class="field-label">
            <i class="fas fa-tag field-icon"></i>
            Tipo
            <i class="fas fa-info-circle text-muted" title="1 - Ativa, 2 - Receptivo"></i>
        </div>
        <div class="field-value">
            <input type="text" class="form-control form-control-sm" value="{{leadTipo}}"
                   data-url="/leads/leads5/lead/update/Leads/{{id}}"
                   name="leadTipo" id="leadTipo">
        </div>
    </div>

    <!-- Emitente -->
    <div class="lead-info-field">
        <div class="field-label">
            <i class="fas fa-building field-icon"></i>
            Emitente
        </div>
        <div class="field-value">
            <select class="form-select form-select-sm" 
                    data-field="unidadeEmitentePOID" 
                    data-lead="{{id}}" 
                    data-ajax-update="{{CONTAINER}}service/update/" 
                    data-ajax--url="{{CONTAINER}}service/emit/">
                {{#Emitente}}<option value="{{emitenteFantasia}}" selected>{{emitenteFantasia}}</option>{{/Emitente}}
            </select>
        </div>
    </div>

    <!-- Faturar para -->
    <div class="lead-info-field">
        <div class="field-label">
            <i class="fas fa-file-invoice field-icon"></i>
            Faturar para
        </div>
        <div class="field-value">
            <select class="form-select form-select-sm"
                    data-field="clienteDoClientePOID"
                    data-lead="{{id}}"
                    data-ajax-update="{{CONTAINER}}service/update/"
                    data-ajax--url="{{CONTAINER}}service/auto/cc_{{clientePOID}}/">
                {{#ClienteDoCliente}}<option value="{{clienteNome}}" selected>{{clienteNome}}</option>{{/ClienteDoCliente}}
                {{^ClienteDoCliente}}<option value="{{Cliente.clienteNome}}" selected>{{Cliente.clienteNome}}</option>{{/ClienteDoCliente}}
            </select>
        </div>
    </div>
</div>






