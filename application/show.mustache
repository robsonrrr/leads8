<!doctype html>
<html lang="en">
    <head>
        {{> partials/header-tailwind}}
    </head>
    <body>

        <div class="spinnerDiv hidden">
            <div class="spinnerLoading"></div>
        </div>

        {{#Lead}}
        <input type="hidden" value="{{id}}" name="leadID" id="leadID" />
        <input type="hidden" value="{{segmentoPOID}}" name="segmentoPOID" id="segmentoPOID" />
        <input type="hidden" value="{{unidadeEmitentePOID}}" name="unidadeEmitentePOID" id="unidadeEmitentePOID" />
        <input type="hidden" value="{{clientePOID}}" name="clientePOID" id="clientePOID" />
        <div class="leadError hidden"></div>

        {{> partials/fixed-top}}


        <div class="container mx-auto px-4 pt-20">
            <!-- Campos em linha -->
            {{> partials/inline-fields}}

            <!-- Informações Detalhadas do Cliente -->
            {{#Cliente}}
            <div class="bg-white rounded-lg shadow-sm mb-6 overflow-hidden border border-gray-200">
                <!-- Header com título e toggle -->
                <div class="bg-gradient-to-r from-cyan-50 to-blue-50 px-4 py-3 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-building mr-2 text-cyan-600"></i>
                            Informações do Cliente
                            <span class="ml-3 text-sm bg-cyan-100 text-cyan-800 px-2 py-1 rounded-full">{{clienteTipoPessoa}}</span>
                        </h3>
                        <button onclick="toggleSection('cliente-info')" 
                                class="flex items-center gap-2 px-3 py-1 bg-cyan-100 hover:bg-cyan-200 text-cyan-800 rounded-md transition-colors duration-200 text-sm font-medium">
                            <i id="cliente-info-icon" class="fas fa-eye-slash"></i>
                            <span id="cliente-info-text">Ocultar</span>
                        </button>
                    </div>
                </div>
                
                <!-- Informações organizadas em seções -->
                <div id="cliente-info-content" class="p-4 space-y-6">
                    <!-- Seção 1: Identificação -->
                    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
                        <!-- Nome/Razão Social -->
                        <div class="col-span-1 md:col-span-2 xl:col-span-1 flex items-start gap-3 p-4 bg-blue-50 rounded-lg border-l-4 border-blue-500">
                            <div class="flex-shrink-0">
                                <i class="fas fa-user-circle text-blue-600 text-xl"></i>
                            </div>
                            <div class="min-w-0 flex-1">
                                <div class="text-xs font-medium text-blue-800 uppercase tracking-wide mb-1">Nome/Razão Social</div>
                                <div class="text-sm text-gray-800 font-semibold break-words">{{clienteNome}}</div>
                                {{#clienteFantasia}}
                                <div class="text-xs text-gray-600 mt-1">Nome Fantasia: {{clienteFantasia}}</div>
                                {{/clienteFantasia}}
                            </div>
                        </div>

                        <!-- CNPJ/CPF -->
                        <div class="flex items-center gap-3 p-4 bg-green-50 rounded-lg border-l-4 border-green-500">
                            <div class="flex-shrink-0">
                                <i class="fas fa-id-card text-green-600 text-xl"></i>
                            </div>
                            <div class="min-w-0">
                                <div class="text-xs font-medium text-green-800 uppercase tracking-wide">{{#clienteCnpj}}CNPJ{{/clienteCnpj}}{{#clienteCpf}}CPF{{/clienteCpf}}</div>
                                <div class="text-sm text-gray-800 font-mono font-semibold">
                                    {{#clienteCnpj}}{{clienteCnpj}}{{/clienteCnpj}}
                                    {{#clienteCpf}}{{clienteCpf}}{{/clienteCpf}}
                                </div>
                                {{#clienteInscricaoEstadual}}
                                <div class="text-xs text-gray-600 mt-1">IE: {{clienteInscricaoEstadual}}</div>
                                {{/clienteInscricaoEstadual}}
                            </div>
                        </div>

                        <!-- Segmento -->
                        <div class="flex items-center gap-3 p-4 bg-purple-50 rounded-lg border-l-4 border-purple-500">
                            <div class="flex-shrink-0">
                                <i class="fas fa-tags text-purple-600 text-xl"></i>
                            </div>
                            <div class="min-w-0">
                                <div class="text-xs font-medium text-purple-800 uppercase tracking-wide">Segmento</div>
                                <div class="text-sm text-gray-800 font-medium">
                                    {{#Segmento.edges}}{{#node}}{{segmentoNome}}{{/node}}{{/Segmento.edges}}
                                </div>
                                {{#clienteCnae}}
                                <div class="text-xs text-gray-600 mt-1">CNAE: {{clienteCnae}}</div>
                                {{/clienteCnae}}
                            </div>
                        </div>
                    </div>

                    <!-- Seção 2: Endereço -->
                    <div class="bg-gray-50 rounded-lg p-4">
                        <h4 class="text-md font-semibold text-gray-800 mb-3 flex items-center">
                            <i class="fas fa-map-marker-alt mr-2 text-red-600"></i>
                            Endereço
                        </h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
                            <!-- Logradouro -->
                            <div class="md:col-span-2">
                                <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Logradouro</div>
                                <div class="text-sm text-gray-800">{{clienteEndereco}}, {{clienteNumero}}</div>
                                {{#clienteComplemento}}
                                <div class="text-xs text-gray-600 mt-1">{{clienteComplemento}}</div>
                                {{/clienteComplemento}}
                            </div>

                            <!-- Bairro -->
                            <div>
                                <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Bairro</div>
                                <div class="text-sm text-gray-800">{{clienteBairro}}</div>
                            </div>

                            <!-- CEP -->
                            <div>
                                <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">CEP</div>
                                <div class="text-sm text-gray-800 font-mono">{{clienteCep}}</div>
                            </div>

                            <!-- Cidade -->
                            <div>
                                <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Cidade</div>
                                <div class="text-sm text-gray-800">{{clienteCidade}}</div>
                            </div>

                            <!-- Estado -->
                            <div>
                                <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Estado</div>
                                <div class="text-sm text-gray-800 font-semibold">{{clienteEstado}}</div>
                            </div>
                        </div>
                    </div>

                    <!-- Seção 3: Informações Financeiras e Comerciais -->
                    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
                        <!-- Limite de Crédito -->
                        <div class="flex items-center gap-3 p-4 bg-emerald-50 rounded-lg border-l-4 border-emerald-500">
                            <div class="flex-shrink-0">
                                <i class="fas fa-credit-card text-emerald-600 text-xl"></i>
                            </div>
                            <div class="min-w-0">
                                <div class="text-xs font-medium text-emerald-800 uppercase tracking-wide">Limite de Crédito</div>
                                <div class="text-lg text-gray-800 font-bold">R$ {{clienteLimite}}</div>
                                <div class="text-xs text-gray-600 mt-1">Prazo: {{clientePrazo}} dias</div>
                            </div>
                        </div>

                        <!-- Regime Fiscal -->
                        <div class="flex items-center gap-3 p-4 bg-orange-50 rounded-lg border-l-4 border-orange-500">
                            <div class="flex-shrink-0">
                                <i class="fas fa-percentage text-orange-600 text-xl"></i>
                            </div>
                            <div class="min-w-0">
                                <div class="text-xs font-medium text-orange-800 uppercase tracking-wide">Regime Fiscal</div>
                                <div class="text-sm text-gray-800 font-medium">{{clienteRegimeFiscal}}</div>
                                {{#clienteDifal}}
                                <div class="text-xs text-red-600 font-medium mt-1">⚠️ Cliente com DIFAL</div>
                                {{/clienteDifal}}
                            </div>
                        </div>

                        <!-- BNDES -->
                        {{#clienteBNDES}}
                        <div class="flex items-center gap-3 p-4 bg-yellow-50 rounded-lg border-l-4 border-yellow-500">
                            <div class="flex-shrink-0">
                                <i class="fas fa-university text-yellow-600 text-xl"></i>
                            </div>
                            <div class="min-w-0">
                                <div class="text-xs font-medium text-yellow-800 uppercase tracking-wide">BNDES</div>
                                <div class="text-sm text-gray-800 font-medium">Habilitado</div>
                                <div class="text-xs text-gray-600 mt-1">Cliente BNDES ativo</div>
                            </div>
                        </div>
                        {{/clienteBNDES}}

                        <!-- Suframa -->
                        {{#clienteSuframa}}
                        <div class="flex items-center gap-3 p-4 bg-teal-50 rounded-lg border-l-4 border-teal-500">
                            <div class="flex-shrink-0">
                                <i class="fas fa-globe-americas text-teal-600 text-xl"></i>
                            </div>
                            <div class="min-w-0">
                                <div class="text-xs font-medium text-teal-800 uppercase tracking-wide">SUFRAMA</div>
                                <div class="text-sm text-gray-800 font-medium">Zona Franca</div>
                                <div class="text-xs text-gray-600 mt-1">Cliente Suframa</div>
                            </div>
                        </div>
                        {{/clienteSuframa}}
                    </div>

                    <!-- Seção 4: Contato -->
                    <div class="bg-gray-50 rounded-lg p-4">
                        <h4 class="text-md font-semibold text-gray-800 mb-3 flex items-center">
                            <i class="fas fa-phone mr-2 text-indigo-600"></i>
                            Informações de Contato
                        </h4>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <!-- Telefone -->
                            {{#clienteTelefone}}
                            <div>
                                <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Telefone</div>
                                <div class="text-sm text-gray-800 font-mono">({{clienteDdd}}) {{clienteTelefone}}</div>
                            </div>
                            {{/clienteTelefone}}

                            <!-- Email Principal -->
                            {{#clienteEmail}}
