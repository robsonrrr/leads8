                    / <small class="text-danger" title="Estoque Geral de Todas Unidades">{{stock.estoqueGeral}}</small>
                    {{/SESSION.check}}
                    {{^SESSION.check}}
                    <small class="text-warning">-</small>
                    {{/SESSION.check}}
                </td>
                {{#produtoIndisponivel}}
