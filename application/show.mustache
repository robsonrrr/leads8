                                <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Email Principal</div>
                                <div class="text-sm text-gray-800 break-all">{{clienteEmail}}</div>
                            </div>
                            {{/clienteEmail}}

                            <!-- Email Financeiro -->
                            {{#clienteEmailFinanceiro}}
                            <div>
                                <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Email Financeiro</div>
                                <div class="text-sm text-gray-800 break-all">{{clienteEmailFinanceiro}}</div>
                            </div>
                            {{/clienteEmailFinanceiro}}
                        </div>

                        <!-- Email NFE em linha separada se existir -->
                        {{#clienteEmailNFE}}
                        <div class="mt-4 pt-4 border-t border-gray-200">
                            <div class="text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Email para NFE</div>
                            <div class="text-sm text-gray-800 break-all">{{clienteEmailNFE}}</div>
                        </div>
                        {{/clienteEmailNFE}}
                    </div>

                    <!-- Seção 5: Isenções e Benefícios Fiscais -->
                    {{#clienteIsentoIPI}}{{#clienteIsentoSt}}
                    <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-4 border border-green-200">
                        <h4 class="text-md font-semibold text-gray-800 mb-3 flex items-center">
                            <i class="fas fa-shield-alt mr-2 text-green-600"></i>
                            Benefícios Fiscais
                        </h4>
                        <div class="flex flex-wrap gap-3">
                            {{#clienteIsentoIPI}}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <i class="fas fa-check-circle mr-1"></i>
                                Isento IPI
                            </span>
                            {{/clienteIsentoIPI}}
                            {{#clienteIsentoSt}}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                <i class="fas fa-check-circle mr-1"></i>
                                Isento ST
                            </span>
                            {{/clienteIsentoSt}}
                            {{#clienteICMSSTEspecial}}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                <i class="fas fa-star mr-1"></i>
                                ICMS ST Especial
                            </span>
                            {{/clienteICMSSTEspecial}}
                        </div>
                    </div>
                    {{/clienteIsentoSt}}{{/clienteIsentoIPI}}
                </div>
            </div>
            {{/Cliente}}

            <!-- Controles Unificados -->
            <div class="bg-white rounded-lg shadow-sm mb-6 overflow-hidden border border-gray-200">
                <!-- Header com título e toggle -->
                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-4 py-3 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-sliders-h mr-2 text-blue-600"></i>
                            Controles de Produtos
                        </h3>
                        <button onclick="toggleSection('produtos-controles')" 
                                class="flex items-center gap-2 px-3 py-1 bg-blue-100 hover:bg-blue-200 text-blue-800 rounded-md transition-colors duration-200 text-sm font-medium">
                            <i id="produtos-controles-icon" class="fas fa-eye-slash"></i>
                            <span id="produtos-controles-text">Ocultar</span>
                        </button>
                    </div>
                </div>
                
                <!-- Controles organizados em grid responsivo -->
                <div id="produtos-controles-content" class="p-4 space-y-4">
                    <!-- Primeira linha: Filtros -->
                    <div class="flex flex-wrap items-center gap-4 p-3 bg-gray-50 rounded-lg">
                        <div class="flex items-center gap-2 min-w-fit">
                            <span class="font-medium text-sm text-gray-700 flex items-center">
                                <i class="fas fa-filter mr-1 text-blue-600"></i>Filtrar:
                            </span>
                        </div>
                        <div class="flex flex-wrap items-center gap-3">
                            <label class="flex items-center cursor-pointer hover:bg-white hover:shadow-sm rounded px-2 py-1 transition-all duration-200" for="searchStockTotal">
                                <input class="w-4 h-4 text-blue-600 bg-white border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 searchStock transition-all duration-300" type="radio" name="searchStock" id="searchStockTotal" value="total">
                                <span class="ml-2 text-sm text-gray-700">com Estoque</span>
                            </label>
                            <label class="flex items-center cursor-pointer hover:bg-white hover:shadow-sm rounded px-2 py-1 transition-all duration-200" for="searchStockSem">
                                <input class="w-4 h-4 text-blue-600 bg-white border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 searchStock transition-all duration-300" type="radio" name="searchStock" id="searchStockSem" value="sem">
                                <span class="ml-2 text-sm text-gray-700">sem Estoque</span>
                            </label>
                            <label class="flex items-center cursor-pointer hover:bg-white hover:shadow-sm rounded px-2 py-1 transition-all duration-200" for="searchStockSP1">
                                <input class="w-4 h-4 text-blue-600 bg-white border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 searchStock transition-all duration-300" type="radio" name="searchStock" id="searchStockSP1" value="1">
                                <span class="ml-2 text-sm text-gray-700">SP-Matriz</span>
                            </label>
                            <label class="flex items-center cursor-pointer hover:bg-white hover:shadow-sm rounded px-2 py-1 transition-all duration-200" for="searchStockSP8">
                                <input class="w-4 h-4 text-blue-600 bg-white border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 searchStock transition-all duration-300" type="radio" name="searchStock" id="searchStockSP8" value="8">
                                <span class="ml-2 text-sm text-gray-700">SP-BF</span>
                            </label>
                            <label class="flex items-center cursor-pointer hover:bg-white hover:shadow-sm rounded px-2 py-1 transition-all duration-200" for="searchStockSC6">
                                <input class="w-4 h-4 text-blue-600 bg-white border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 searchStock transition-all duration-300" type="radio" name="searchStock" id="searchStockSC6" value="6">
                                <span class="ml-2 text-sm text-gray-700">SC</span>
                            </label>
                            <label class="flex items-center cursor-pointer hover:bg-white hover:shadow-sm rounded px-2 py-1 transition-all duration-200" for="searchStockPrevisao">
                                <input class="w-4 h-4 text-blue-600 bg-white border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 searchStock transition-all duration-300" type="radio" name="searchStock" id="searchStockPrevisao" value="previsao">
