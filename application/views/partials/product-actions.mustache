            {{/SESSION.acessoGerencial}}

            {{#SESSION.acessoDiretoria}}
            <a class="dropdown-item mb-1 border-bottom" data-toggle="modal" data-title="Detalhes do Produto"
               data-target="#remoteModal" data-remote="https://dev.office.internut.com.br/K3/tip/vproduct/{{produtoPOID}}">detalhes do produto</a>
            {{/SESSION.acessoDiretoria}}

          <!--  <a class="dropdown-item mb-1 border-bottom" data-toggle="modal" data-title="Histórico de Venda do Produto"
               data-target="#remoteModal" data-remote="/K3/tip/product/101219/">última vendas (completo)</a>//-->

            <a class="dropdown-item mb-1 border-bottom" data-toggle="modal" data-title="Histórico de Venda do Produto"
               data-target="#remoteModal" data-remote="{{CONTAINER}}product/sales/{{produtoPOID}}?nop=27">última vendas (completo)</a>

            <a class="dropdown-item mb-1 border-bottom" data-toggle="modal" data-title="Histórico de Venda do Produto"
               data-target="#remoteModal" data-remote="{{CONTAINER}}product/sales/{{produtoPOID}}/{{Cliente.clienteID}}?nop=27">últimas vendas (cliente)</a>
