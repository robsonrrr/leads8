<link rel="stylesheet" href="/leads8/css/lead-info.css">

<div class="lead-info">
    <!-- Data Criado -->
    <div class="lead-info-item date">
        <i class="far fa-calendar-alt"></i>
        <span class="label">Data Criado:</span>
        <span class="value">{{dataEmissaoFormatado}}, {{dataEmissaoDias}} dia(s)</span>
    </div>

    <!-- Vendedor/Emissor -->
    <div class="lead-info-item vendor">
        <i class="fas fa-user-tie"></i>
        <span class="label">Vendedor/Emissor:</span>
        <span class="value">{{Cliente.Gerente.UsuarioNomeCurto}} / {{Vendedor.UsuarioNomeCurto}}</span>
    </div>

    <!-- Financeiro -->
    <div class="lead-info-item financial">
        <i class="far fa-money-bill-alt"></i>
        <span class="label">Financeiro:</span>
        <span class="value">
            {{#Financeiro}}
            <span title="limite total">{{limite}}</span> /
            <span title="limite disponível">{{disponivel}}</span> /
            {{#atrasados}}<span class="text-danger">{{atrasados}}</span>{{/atrasados}}
            {{^atrasados}}<span class="text-success">0</span>{{/atrasados}}
            {{/Financeiro}}
        </span>
    </div>

    <!-- Cadastro -->
    <div class="lead-info-item registration">
        <i class="fas fa-users-cog"></i>
        <span class="label">Cadastro:</span>
        <span class="value">
            {{#Cliente}}
            Descontos: {{clienteDesconto}}, {{clienteDescontoMakAutomotive}}, {{clienteDescontoPedido}} |
            Juros: {{clienteJuros}} | Sobretaxa: {{clienteSobretaxa}}
            {{/Cliente}}
        </span>
    </div>

    <!-- Fonte -->
    <div class="lead-info-item">
        <i class="fab fa-font-awesome-flag"></i>
        <span class="label">Fonte:</span>
        <input type="text" class="form-control form-control-sm" value="{{leadFonte}}"
               data-url="/leads/leads5/lead/update/Leads/{{id}}"
               name="leadFonte" id="leadFonte">
        <i class="fas fa-question-circle" title="0 - desconhecido, 1 - B2B, 2 - B2C, 3 - ML, 4 - B2W, 5 - Shopee, 6 - Magalu, 7 - Viavarejo, 8 - Amazon, 9 - Instagram, 10 - Facebook, 11 - Youtube, 12 - Visita, 13 - Campanha, 14 - Promoção, 15 - Email marketing"></i>
    </div>

    <!-- Tipo -->
    <div class="lead-info-item">
        <i class="fas fa-tag"></i>
        <span class="label">Tipo:</span>
        <input type="text" class="form-control form-control-sm" value="{{leadTipo}}"
               data-url="/leads/leads5/lead/update/Leads/{{id}}"
               name="leadTipo" id="leadTipo">
        <i class="fas fa-question-circle" title="1 - Ativa, 2 - Receptivo"></i>
    </div>

    <!-- Emitente -->
    <div class="lead-info-item">
        <i class="fas fa-building"></i>
        <span class="label">Emitente:</span>
        <select class="form-select form-select-sm"
                data-field="unidadeEmitentePOID"
                data-lead="{{id}}"
                data-ajax-update="{{CONTAINER}}service/update/"
                data-ajax--url="{{CONTAINER}}service/emit/">
            {{#Emitente}}<option value="{{emitenteFantasia}}" selected>{{emitenteFantasia}}</option>{{/Emitente}}
        </select>
    </div>

    <!-- Faturar para -->
    <div class="lead-info-item">
        <i class="fas fa-file-invoice"></i>
        <span class="label">Faturar para:</span>
        <select class="form-select form-select-sm"
                data-field="clienteDoClientePOID"
                data-lead="{{id}}"
                data-ajax-update="{{CONTAINER}}service/update/"
                data-ajax--url="{{CONTAINER}}service/auto/cc_{{clientePOID}}/">
            {{#ClienteDoCliente}}<option value="{{clienteNome}}" selected>{{clienteNome}}</option>{{/ClienteDoCliente}}
            {{^ClienteDoCliente}}<option value="{{Cliente.clienteNome}}" selected>{{Cliente.clienteNome}}</option>{{/ClienteDoCliente}}
        </select>
    </div>
</div>






