<!-- Modern Observations Modal -->
<div class="modal fade" id="obsModal" tabindex="-1" aria-labelledby="obsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <h5 class="modal-title" id="obsModalLabel">
                    <i class="bi bi-sticky me-2"></i>
                    Observações do Pedido / Cotação / Lead
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="{{CONTAINER}}lead/update/{{id}}">
                <div class="modal-body modern-modal-body">
                    <div class="mb-3">
                        <label for="observacaoFinaceiro" class="form-label">
                            <i class="bi bi-currency-dollar me-1"></i>
                            Observação Financeiro
                        </label>
                        <textarea class="form-control modern-textarea" name="observacaoFinaceiro" id="observacaoFinaceiro" rows="3" placeholder="Digite observações relacionadas ao financeiro...">{{observacaoFinaceiro}}</textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="observacaoLogistica" class="form-label">
                            <i class="bi bi-truck me-1"></i>
                            Observação Logística
                        </label>
                        <textarea class="form-control modern-textarea" name="observacaoLogistica" id="observacaoLogistica" rows="3" placeholder="Digite observações relacionadas à logística...">{{observacaoLogistica}}</textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="observacaoNotaFiscal" class="form-label">
                            <i class="bi bi-file-earmark-text me-1"></i>
                            Observação Nota Fiscal
                        </label>
                        <textarea class="form-control modern-textarea" name="observacaoNotaFiscal" id="observacaoNotaFiscal" rows="3" placeholder="Digite observações relacionadas à nota fiscal...">{{observacaoNotaFiscal}}</textarea>
                    </div>
                </div>

                <div class="modal-footer modern-modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x me-1"></i>
                        Fechar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>
                        Gravar Edições
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

