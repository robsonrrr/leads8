        <!-- Lead Sections Toggle Script -->
        <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButton = document.getElementById('toggleLeadSections');
            const leadSections = document.querySelectorAll('.lead-info-section, .lead-config-section, .product-search-section');
            const toggleIcon = toggleButton.querySelector('i');
            const toggleText = toggleButton.querySelector('.toggle-text');
            
            let sectionsVisible = false;
            
            toggleButton.addEventListener('click', function() {
                sectionsVisible = !sectionsVisible;
                
                leadSections.forEach(section => {
                    if (sectionsVisible) {
                        section.classList.remove('d-none');
                    } else {
                        section.classList.add('d-none');
                    }
                });
                
                // Update button appearance
                if (sectionsVisible) {
                    toggleIcon.className = 'bi bi-eye me-1';
                    toggleText.textContent = 'Ocultar Informações';
                    toggleButton.classList.remove('btn-outline-primary');
                    toggleButton.classList.add('btn-primary');
                } else {
                    toggleIcon.className = 'bi bi-eye-slash me-1';
                    toggleText.textContent = 'Mostrar Informações';
                    toggleButton.classList.remove('btn-primary');
                    toggleButton.classList.add('btn-outline-primary');
                }
            });
        });
        </script>
