<div id="cartContent">

    {{#existPendencies}}
    <div class="alert alert-danger" role="alert">
        <strong>Pendências!</strong> favor corrigir {{existPendencies}}
    </div>
    {{/existPendencies}}

    <!-- Modern Cart Header -->
    <div class="modern-cart-header">
        <div class="cart-header-content">
            <div class="cart-title-section">
                <h2 class="cart-title">
                    <i class="fas fa-shopping-cart"></i>
                    Produtos no Carrinho
                </h2>
                <p class="cart-subtitle">Os itens no carrinho não são garantia de estoque</p>
            </div>
            
            <div class="cart-actions">
                <div class="cart-controls">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="customSwitch1" data-update="{{CONTAINER}}lead/session/{{id}}" {{#SESSION.check}}checked{{/SESSION.check}}>
                        <label class="custom-control-label" for="customSwitch1">Verificar Estoque</label>
                    </div>
                    
                    <button type="button" class="btn btn-outline-secondary btn-sm hide-all-empty-discounts" title="Ocultar descontos vazios">
                        <i class="fas fa-eye-slash"></i> Ocultar Vazios
                    </button>
                </div>
                
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="cartActionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-cog"></i> Ações
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="cartActionsDropdown">
                        <li><a class="dropdown-item" target="_blank" href="{{CONTAINER}}lead/print/{{id}}"><i class="fas fa-print"></i> Imprimir</a></li>
                        <li><a class="dropdown-item" target="_blank" href="{{CONTAINER}}lead/mail/{{id}}"><i class="fas fa-envelope"></i> Email</a></li>
                        <li><a class="dropdown-item" target="_blank" href="{{CONTAINER}}lead/aviseme/{{id}}"><i class="fas fa-bell"></i> Avise-me</a></li>
                        <li><a class="dropdown-item" target="_blank" href="{{CONTAINER}}lead/export/{{id}}"><i class="fas fa-download"></i> Exportar</a></li>
                        <li><a class="dropdown-item" target="_blank" href="{{CONTAINER}}lead/clean/{{id}}"><i class="fas fa-broom"></i> Produtos Negativos</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Desktop Table View -->
    <div class="modern-table-container d-none d-lg-block">
        <table class="table modern-table" id="cartTable">
            <thead>
                    <th class="text-center">#</th>
                    <th class="text-center">Imagem</th>
                    <th>Produto</th>
                    <th class="text-center">Marca</th>
                    <th class="text-center">Emb.</th>
                    <th class="text-center">Peso</th>
                    <th class="text-center">Qtd.</th>
                    <th class="text-center">Valor Venda</th>
                    <th class="text-end">Subtotal</th>
                    <th class="text-end">IPI</th>
                    <th class="text-end">ST</th>
                    <th class="text-end">Total</th>
                    <th class="text-center">Desconto</th>
                    <th class="text-center">Margem</th>
                    <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody> 
            {{#Produtos}}
            <tr id="colunm_{{POID}}" class="product-row {{#produtoIndisponivel}}table-warning{{/produtoIndisponivel}}">
                <td class="text-center product-number">
                    <div class="product-counter">{{produtoContagem}}</div>
                    <div class="product-checkbox">
                        <input class="form-check-input checkBoxClass" name="product" type="checkbox" id="product_{{POID}}" value="{{POID}}">
                    </div>
                </td>
                <td class="text-center product-image">
                    <div class="product-image-container">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#remoteModal" data-remote="{{CONTAINER}}lead/product/{{produtoPOID}}">
                            <img src="{{ENV.img}}id/w45/{{produtoPOID}}.jpg?version={{VERSION}}" class="product-img" alt="{{Detalhe.produtoModelo}}">
                        </a>
                    </div>
                </td>
                <td class="product-info">
                    <div class="product-title">
                        <a href="{{CONTAINER}}{{id}}?query={{Detalhe.produtoModelo}}" class="product-link">{{Detalhe.produtoModelo}}</a>
                        {{> partials/product-actions}}
                    </div>
                    <div class="product-description">
                        {{Detalhe.produtoNome}} 
                        {{#produtoMedida}}<span class="product-measure">{{produtoMedida}}</span>{{/produtoMedida}}
                    </div>
                </td>
                <td class="text-center brand-cell">
                    {{#Detalhe.produtoMarcaFormatado}}
                    <div class="brand-logo">
                        <img src="{{ENV.cdn}}svg/marca/{{Detalhe.produtoMarcaFormatado}}.svg?version={{VERSION}}" title="{{Detalhe.produtoMarca}}" alt="{{Detalhe.produtoMarca}}" class="brand-img"/>
                    </div>
                    {{/Detalhe.produtoMarcaFormatado}}
                    {{^Detalhe.produtoMarcaFormatado}}
                    <span class="no-brand">s/m</span>
                    {{/Detalhe.produtoMarcaFormatado}}
                </td>
                <td class="text-center packaging-cell">
                    {{#Detalhe.produtoEmbalagem}}
                    <div class="packaging-info">
                        <img src="{{ENV.cdn}}svg/icones/emb-{{Detalhe.produtoEmbalagem}}-{{Detalhe.produtoMarcaFormatado}}.svg?version={{VERSION}}" title="{{solr.produtoEmbalagem}}" alt="{{solr.produtoEmbalagem}}" class="packaging-icon"/> 
                        <span class="packaging-text">{{solr.produtoEmbalagem}}</span>
                    </div>
                    {{/Detalhe.produtoEmbalagem}}
                    {{^Detalhe.produtoEmbalagem}}
                    <span class="packaging-text">{{solr.produtoEmbalagem}}</span>
                    {{/Detalhe.produtoEmbalagem}}
                </td>
                <td class="text-center weight-cell">
                    <div class="weight-info">
                        <span class="weight-value">{{Detalhe.produtoPeso}}</span>
                        {{#SESSION.acessoFinanceiro}}
                        <div class="freight-info">Frete: {{produtoFrete}} / {{produtoFreteTotal}}</div>
                        {{/SESSION.acessoFinanceiro}}
                    </div>
                </td>
                <td class="text-center quantity-cell">
                    <div class="quantity-input-group">
                        <input type="text" class="form-control qty-cart text-center mask-qty" data-update="/services/cart/update/{{POID}}" data-lead="{{id}}" autocomplete="off"
                               data-product="{{produtoPOID}}" id="qty_cart_{{produtoPOID}}" value="{{produtoQuantidade}}" name="produtoQuantidade"
                               min="1" max="999999" maxlength="5">
                    </div>
                    {{#SESSION.check}}
                    <div class="stock-info">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#remoteModal" data-remote="{{CONTAINER}}product/ecommerce/{{produtoPOID}}/{{Lead.unidadeEmitentePOID}}" title="Estoque Ecommerce">
                            <span class="stock-ecommerce">{{stock.estoqueEcommerce}}</span>
                        </a>
                        / <span class="stock-commercial" title="Estoque Comercial">{{stock.estoqueComercial}}</span>
                        {{#SESSION.acessoGerencial}}
                        / <span class="stock-total" title="Estoque Total">{{stock.estoqueTotal}}</span>
                        {{/SESSION.acessoGerencial}}
                    </div>
                    {{/SESSION.check}}
                    {{^SESSION.check}}
                    <div class="stock-info"><span class="stock-unavailable">-</span></div>
                    {{/SESSION.check}}
                </td>
                {{#produtoIndisponivel}}
                <td class="align-middle text-center" colspan="7">
                    Quantidade do item indisponível
                </td>
                {{/produtoIndisponivel}}
                {{^produtoIndisponivel}}
                <td class="align-middle text-center" width="7%">
                    {{#produtoPrecoAjustado}}
                    <input type="text" class="form-control form-control-sm rounded-0 text-center product-discount text-info font-weight-bolder" id="qty_cart_discount_{{produtoPOID}}" data-type="price" min="0" max="" maxlength="" data-product="{{produtoPOID}}" data-lead-product="{{POID}}" data-lead="{{id}}" data-url="{{CONTAINER}}lead/discount" value="{{produtoValorArredondado}}">
                    {{/produtoPrecoAjustado}}
                    {{^produtoPrecoAjustado}}
                    <input type="text" class="form-control form-control-sm rounded-0 text-center product-discount text-dark font-weight-bolder" id="qty_cart_discount_{{produtoPOID}}" data-type="price" min="0" max="" maxlength="" data-product="{{produtoPOID}}" data-lead-product="{{POID}}" data-lead="{{id}}" data-url="{{CONTAINER}}lead/discount" value="{{produtoValorArredondado}}">
                    {{/produtoPrecoAjustado}}

                    <small title="Preço Cliente">{{produtoValorOriginal}}</small>
                    {{#SESSION.acessoGerencial}}
                    / <small title="Preço base do Produto" class="text-danger"> {{Detalhe.produtoRevenda}}</small>
                    {{/SESSION.acessoGerencial}}
                </td>
                <td class="align-middle text-right">
                    <p class="p-0 m-0">{{produtoValorSubtotal}}</p>
                    {{#SESSION.acessoWebmaster}}
                    <p class="p-0 m-0 font11 text-muted">({{produtoValor}} unit.)</p>
                    {{/SESSION.acessoWebmaster}}
                </td>
                <td class="align-middle text-right">
                    <p class="p-0 m-0">{{produtoIPISubtotal}} </p>
                    {{#SESSION.acessoWebmaster}}
                    <p class="p-0 m-0 font11 text-muted">({{produtoIPI}} unit.)</p>
                    {{/SESSION.acessoWebmaster}}
                </td>
                <td class="align-middle text-right">
                    <p class="p-0 m-0">{{produtoSTSubtotal}}</p>
                    {{#SESSION.acessoWebmaster}}
                    <p class="p-0 m-0 font11 text-muted">({{produtoST}} unit.)</p>
                    {{/SESSION.acessoWebmaster}}
                </td>
                <td class="align-middle text-right">
                    <p class="p-0 m-0 font-weight-bold">{{produtoValorSubtotalComImpostos}}</p>
                    <p class="p-0 m-0 font11 text-muted">({{produtoValorUnitarioComImpostos}} unit.)</p>
                </td>
                {{#bearings}}
                <td class="align-middle text-center" width="5%">
                    <input type="text" class="form-control form-control-sm rounded-0 text-center product-discount mask-discount"
                           id="cart_discount_{{produtoPOID}}" data-type="discount" min="0" max="99" maxlength="3" data-product="{{produtoPOID}}"
                           data-classe="{{Detalhe.produtoClassificacao}}" data-lead-product="{{POID}}" data-lead="{{id}}" 
                           data-url="{{CONTAINER}}lead/discount" value="{{produtoDescontoPorcentagem}}">
                    {{#bearings}}
                    <p class="p-0 pt-1 m-0 font11 text-muted">
                        Max: {{Classificacao.classificacaoDescontoVendedor}}%  {{#SESSION.acessoGerencial}}/ {{Classificacao.classificacaoDescontoGerente}}%{{/SESSION.acessoGerencial}}
                    </p>
                    {{/bearings}}
                </td>
                <td class="align-middle text-center" width="5%">
                    {{#SESSION.acessoDiretoria}}
                    {{#bearings}}
                    <p class="p-0 m-0 font11 text-danger"> {{margemNominalFormatado}} / <span>{{margemPercentual}}</span>%</p>
                    <p class="p-0 pt-1 m-0 font11 text-muted" title="Quantidade:{{Custo.qtd}}"> {{Custo.estimado}} - {{Custo.chegada}}</p>
                    {{/bearings}}
                    {{/SESSION.acessoDiretoria}}
                </td>
                {{/bearings}}
                {{^bearings}}
                <td class="align-middle text-center" width="4%" colspan="2">
                    <input type="text" class="form-control form-control-sm rounded-0 text-center product-discount mask-discount"
                           id="qty_cart_discount_{{produtoPOID}}" data-type="discount" min="0" max="99" maxlength="3" data-product="{{produtoPOID}}"
                           data-classe="{{Detalhe.produtoClassificacao}}" data-lead-product="{{POID}}" data-lead="{{id}}" 
                           data-url="{{CONTAINER}}lead/discount" value="{{produtoDescontoPorcentagem}}">
                </td>
                {{/bearings}}
                {{/produtoIndisponivel}}
                <td class="align-middle text-center" width="1%">
                    <a class="cart-remove-item btn btn-sm btn-danger" href="#colunm_{{POID}}" data-lead-id="{{leadPOID}}" id="colunm_remove_{{POID}}" data-name="{{Detalhe.produtoModelo}}" data-product-id="{{POID}}" data-service="/services/cart/delete/{{POID}}">
                        <i class="far fa-trash-alt" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            {{/Produtos}}
            {{^Produtos}}
            <tr>
                <td colspan="16" class="text-center p-3">
                    <p>
                        <img src="{{ENV.cdn}}media/r6/carrinho-vazio.svg" width="200" /> 
                    </p>
                    <span class="h4 text-muted">Seu Carrinho está vazio!</span>
                </td>
            </tr>
            {{/Produtos}}
        </tbody>
        {{#Total}}
        <tfoot class="{{^Produtos}}d-none{{/Produtos}} table-dark">
            <tr class="fw-bold text-white">
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="text-center">{{peso}}</td>
                <td class="text-center">{{quantidade}}</td>
                <td class="text-center"></td>
                <td class="text-end">{{produto}}</td>
                <td class="text-end">{{ipi}}</td>
                <td class="text-end">{{st}}</td>
                <td class="text-end">{{bruto}}</td>
                <td class="text-center">
                    {{#SESSION.acessoDiretoria}}
                    {{nominal}} / {{percentual}}
                    {{/SESSION.acessoDiretoria}}
                </td>
                <td class="text-center">
                    {{#SESSION.acessoDiretoria}}
                    Margem
                    {{/SESSION.acessoDiretoria}}
                </td>
                <td></td>
            </tr>
        </tfoot>
        {{/Total}}
    </table>
    </div>

    <!-- Mobile Card View -->
    <div class="mobile-cards d-lg-none">
        {{#Produtos}}
        <div class="cart-product-card mb-3" id="card_{{POID}}">
            <div class="card {{#produtoIndisponivel}}border-warning{{/produtoIndisponivel}}">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-3">
                            <div class="product-image-container">
                                <a href="#" data-bs-toggle="modal" data-bs-target="#remoteModal" data-remote="{{CONTAINER}}lead/product/{{produtoPOID}}">
                                    <img src="{{ENV.img}}id/w45/{{produtoPOID}}.jpg?version={{VERSION}}" class="product-img" alt="{{Detalhe.produtoModelo}}">
                                </a>
                            </div>
                        </div>
                        <div class="col-9">
                            <div class="product-header">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="product-title-section">
                                        <h6 class="product-title mb-1">
                                            <a href="{{CONTAINER}}{{id}}?query={{Detalhe.produtoModelo}}" class="product-link">{{Detalhe.produtoModelo}}</a>
                                        </h6>
                                        <p class="product-description mb-2">{{Detalhe.produtoNome}}</p>
                                    </div>
                                    <div class="product-actions">
                                        <input class="form-check-input" name="product" type="checkbox" id="product_mobile_{{POID}}" value="{{POID}}">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="product-details">
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="detail-item">
                                            <span class="detail-label">Marca:</span>
                                            {{#Detalhe.produtoMarcaFormatado}}
                                            <img src="{{ENV.cdn}}svg/marca/{{Detalhe.produtoMarcaFormatado}}.svg?version={{VERSION}}" title="{{Detalhe.produtoMarca}}" alt="{{Detalhe.produtoMarca}}" class="brand-img-small"/>
                                            {{/Detalhe.produtoMarcaFormatado}}
                                            {{^Detalhe.produtoMarcaFormatado}}
                                            <span class="no-brand">s/m</span>
                                            {{/Detalhe.produtoMarcaFormatado}}
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="detail-item">
                                            <span class="detail-label">Peso:</span>
                                            <span class="detail-value">{{Detalhe.produtoPeso}}</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="detail-item">
                                            <span class="detail-label">Embalagem:</span>
                                            <span class="detail-value">{{solr.produtoEmbalagem}}</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="detail-item">
                                            <span class="detail-label">Estoque:</span>
                                            {{#SESSION.check}}
                                            <span class="stock-ecommerce">{{stock.estoqueEcommerce}}</span> / <span class="stock-commercial">{{stock.estoqueComercial}}</span>
                                            {{/SESSION.check}}
                                            {{^SESSION.check}}
                                            <span class="stock-unavailable">-</span>
                                            {{/SESSION.check}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="product-pricing mt-3">
                                <div class="row align-items-center">
                                    <div class="col-4">
                                        <div class="quantity-control">
                                            <label class="form-label small">Qtd:</label>
                                            <input type="text" class="form-control form-control-sm qty-cart text-center mask-qty" 
                                                   data-update="/services/cart/update/{{POID}}" data-lead="{{id}}" autocomplete="off"
                                                   data-product="{{produtoPOID}}" value="{{produtoQuantidade}}" name="produtoQuantidade"
                                                   min="1" max="999999" maxlength="5">
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="price-control">
                                            <label class="form-label small">Preço:</label>
                                            {{^produtoIndisponivel}}
                                            <input type="text" class="form-control form-control-sm text-center product-discount" 
                                                   data-type="price" data-product="{{produtoPOID}}" data-lead-product="{{POID}}" 
                                                   data-lead="{{id}}" data-url="{{CONTAINER}}lead/discount" value="{{produtoValorArredondado}}">
                                            {{/produtoIndisponivel}}
                                            {{#produtoIndisponivel}}
                                            <span class="text-warning">Indisponível</span>
                                            {{/produtoIndisponivel}}
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="total-price">
                                            <label class="form-label small">Total:</label>
                                            <div class="fw-bold text-primary">{{produtoValorSubtotalComImpostos}}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="product-actions-bottom mt-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="discount-control">
                                        <label class="form-label small">Desconto %:</label>
                                        <input type="text" class="form-control form-control-sm text-center product-discount mask-discount" 
                                               data-type="discount" data-product="{{produtoPOID}}" data-classe="{{Detalhe.produtoClassificacao}}" 
                                               data-lead-product="{{POID}}" data-lead="{{id}}" data-url="{{CONTAINER}}lead/discount" 
                                               value="{{produtoDescontoPorcentagem}}" style="width: 80px;">
                                    </div>
                                    <button class="btn btn-danger btn-sm cart-remove-item" 
                                            data-lead-id="{{leadPOID}}" data-name="{{Detalhe.produtoModelo}}" 
                                            data-product-id="{{POID}}" data-service="/services/cart/delete/{{POID}}">
                                        <i class="fas fa-trash-alt"></i> Remover
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/Produtos}}
        
        {{^Produtos}}
        <div class="empty-cart text-center py-5">
            <img src="{{ENV.cdn}}media/r6/carrinho-vazio.svg" width="200" alt="Carrinho vazio" /> 
            <h4 class="text-muted mt-3">Seu Carrinho está vazio!</h4>
        </div>
        {{/Produtos}}
    </div>
</div>

<!-- Cart Actions -->
<div class="cart-actions-section mt-4">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <div class="cart-bulk-actions">
                <h6 class="mb-3">Ações em Lote</h6>
                <div class="btn-group flex-wrap" role="group" aria-label="Ações do carrinho">
                    <button type="button" class="btn btn-outline-danger btn-sm submitProducts" name="remove">
                        <i class="fas fa-trash-alt"></i> Remover Selecionados
                    </button>
                    <button type="button" class="btn btn-outline-warning btn-sm submitProducts" name="add">
                        <i class="fas fa-check"></i> Manter Selecionados
                    </button>
                    <button type="button" class="btn btn-outline-danger btn-sm cart-remove" 
                            {{^existProducts}}disabled{{/existProducts}} data-lead-id="{{id}}" id="cart_remove" 
                            data-service="/services/cart/clear/{{id}}">
                        <i class="fas fa-trash-alt"></i> Remover Todos
                    </button>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="cart-checkout-section text-lg-end">
                {{#Total}}
                <div class="cart-summary mb-3">
                    <div class="summary-item">
                        <span class="summary-label">Total de Produtos:</span>
                        <span class="summary-value fw-bold">{{quantidade}}</span>
                    </div>
                    <div class="summary-item">
                        <span class="summary-label">Valor Total:</span>
                        <span class="summary-value fw-bold text-success fs-5">{{bruto}}</span>
                    </div>
                </div>
                {{/Total}}
                {{#existProducts}}
                <a href="{{CONTAINER}}order/checkout/{{id}}/{{segmentoPOID}}" 
                   class="btn btn-success btn-lg px-4 {{^SESSION.check}}disabled{{/SESSION.check}} {{#existPendencies}}disabled{{/existPendencies}} {{#multiple}}disabled{{/multiple}}">
                    <i class="fas fa-fast-forward"></i> Ir Próxima Etapa
                </a>
                <div class="mt-2">
                    <small class="text-muted">+1 etapa para concluir o pedido</small>
                </div>
                {{/existProducts}}
            </div>
        </div>
    </div>
</div>