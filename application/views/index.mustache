<!doctype html>
<html lang="en">
    <head>
        {{> partials/header}}
    </head>
    <body>
        <!-- Loading Spinner -->
        <div class="modern-spinner d-none">
            <div class="spinner-overlay">
                <div class="spinner-content">
                    <div class="spinner-circle"></div>
                    <p class="spinner-text">Carregando...</p>
                </div>
            </div>
        </div>

        {{#Lead}}
        <!-- Hidden Form Fields -->
        <input type="hidden" value="{{id}}" name="leadID" id="leadID" />
        <input type="hidden" value="{{segmentoPOID}}" name="segmentoPOID" id="segmentoPOID" />
        <input type="hidden" value="{{unidadeEmitentePOID}}" name="unidadeEmitentePOID" id="unidadeEmitentePOID" />
        <input type="hidden" value="{{clientePOID}}" name="clientePOID" id="clientePOID" />
        
        <!-- Error Alert -->
        <div class="alert alert-danger alert-dismissible fade d-none" role="alert" id="leadError">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <span class="error-message"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Main Content -->
        <main class="main-content">
            <div class="container">
                <!-- Collapsible Sections Row -->
                <div class="row g-3 mb-4">
                    <div class="col-lg-4 col-md-6 lead-info-section d-none">
                        <section class="lead-info-section h-100">
                            <div class="modern-card config-section info-section h-100">
                                <div class="config-header bg-info bg-opacity-10">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <div class="config-icon-wrapper me-3">
                                                <i class="bi bi-info-circle"></i>
                                            </div>
                                            <div>
                                                <h4 class="config-title mb-1">Informações do Lead</h4>
                                                <p class="config-subtitle mb-0">Dados principais do lead</p>
                                            </div>
                                        </div>
                                        <a class="btn btn-sm btn-outline-info" data-bs-toggle="collapse" href="#leadInfoCollapse" role="button" aria-expanded="false" aria-controls="leadInfoCollapse">
                                            <i class="bi bi-chevron-down me-1"></i>
                                            <span class="toggle-text">Mostrar</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="collapse" id="leadInfoCollapse">
                                    <div class="config-body">
                                        <div class="d-flex flex-wrap justify-content-between">
                                            <div class="me-3">
                                                <label class="form-label small"><i class="bi bi-calendar me-1"></i> Data Criado</label>
                                                <p class="form-control-plaintext form-control-sm py-0">{{dataEmissaoFormatado}} ({{dataEmissaoDias}} dia(s))</p>
                                            </div>
                                            <div class="me-3">
                                                <label class="form-label small"><i class="bi bi-person-tie me-1"></i> Vendedor / Emissor</label>
                                                <p class="form-control-plaintext form-control-sm py-0">{{Cliente.Gerente.UsuarioNomeCurto}} / {{Vendedor.UsuarioNomeCurto}}</p>
                                            </div>
                                            <div class="me-3">
                                                <label for="leadFonte" class="form-label small">
                                                    <i class="bi bi-flag me-1"></i> Fonte
                                                    <i class="bi bi-question-circle info-tooltip" 
                                                   data-bs-toggle="tooltip" 
                                                   title="Origem: 0-Desconhecido, 1-B2B, 2-B2C, 3-ML, 4-B2W, 5-Shopee, 6-Magalu, 7-Viavarejo, 8-Amazon, 9-Instagram, 10-Facebook, 11-Youtube, 12-Visita, 13-Campanha, 14-Promoção, 15-Email"></i>
                                                </label>
                                                <input class="form-control form-control-sm update-field" 
                                                       data-url="/leads/leads5/lead/update/Leads/{{id}}" 
                                                       name="leadFonte" 
                                                       id="leadFonte" 
                                                       value="{{leadFonte}}">
                                            </div>
                                            <div>
                                                <label for="leadTipo" class="form-label small">
                                                    <i class="bi bi-tag me-1"></i> Tipo
                                                    <i class="bi bi-question-circle info-tooltip" 
                                                   data-bs-toggle="tooltip" 
                                                   title="1 - Ativa, 2 - Receptivo"></i>
                                                </label>
                                                <input class="form-control form-control-sm update-field" 
                                                       data-url="/leads/leads5/lead/update/Leads/{{id}}" 
                                                       name="leadTipo" 
                                                       id="leadTipo" 
                                                       value="{{leadTipo}}">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    
                    <div class="col-lg-4 col-md-6 lead-config-section d-none">
                        <section class="config-section-h h-100">
                            <div class="modern-card config-section h-100">
                        <div class="config-header bg-primary bg-opacity-10">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="config-icon-wrapper me-3">
                                        <i class="bi bi-gear"></i>
                                    </div>
                                    <div>
                                        <h4 class="config-title mb-1">Configurações do Lead</h4>
                                        <p class="config-subtitle mb-0">Ajustes e preferências</p>
                                    </div>
                                </div>
                                <a class="btn btn-outline-info btn-sm" 
                                   data-bs-toggle="collapse" 
                                   href="#configCollapse" 
                                   role="button" 
                                   aria-expanded="false" 
                                   aria-controls="configCollapse">
                                    <i class="bi bi-chevron-down me-1"></i>
                                    <span class="toggle-text">Mostrar</span>
                                </a>
                            </div>
                        </div>
                        
                        <div class="collapse" id="configCollapse">
                            <div class="modern-card-body config-body">
                            <!-- Single Row Configuration -->
                            <div class="config-row">
                                <div class="row g-3">
                                    <!-- Emitente Configuration -->
                                    <div class="col-xl-3 col-lg-4 col-md-6">
                                        <div class="config-item modern-config-item">
                                            <label class="config-label modern-label">
                                                <i class="bi bi-building me-2 text-primary"></i>
                                                <span class="label-text">Emitente</span>
                                                <i class="bi bi-question-circle text-muted ms-1 config-help" 
                                                   data-bs-toggle="tooltip" 
                                                   title="Selecione a unidade emitente" 
                                                   data-poload="{{CONTAINER}}helper/unity/?clienteID={{clientePOID}}"></i>
                                            </label>
                                            <div class="config-input-wrapper">
                                                {{#machines}}
                                                <select class="form-select select2-ajax modern-select config-select" 
                                                        data-field="unidadeEmitentePOID" 
                                                        data-lead="{{id}}" 
                                                        data-ajax-update="{{CONTAINER}}service/update/" 
                                                        data-ajax--url="{{CONTAINER}}service/emit/">
                                                    {{#Emitente}}<option value="{{emitenteFantasia}}" selected="selected">{{emitenteFantasia}}</option>{{/Emitente}}
                                                </select>
                                                {{/machines}}
                                                {{^machines}}
                                                <select class="form-select select2-ajax modern-select config-select" 
                                                        data-recalculate="true" 
                                                        data-recalculate-price="true" 
                                                        data-field="unidadeEmitentePOID" 
                                                        data-lead="{{id}}" 
                                                        data-ajax-update="{{CONTAINER}}service/update/" 
                                                        data-ajax--url="{{CONTAINER}}service/emit/">
                                                    {{#Emitente}}<option value="{{emitenteFantasia}}" selected="selected">{{emitenteFantasia}}</option>{{/Emitente}}
                                                </select>
                                                {{/machines}}
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Prazo Configuration -->
                                    {{#bearings}}
                                    <div class="col-xl-3 col-lg-4 col-md-6">
                                        <div class="config-item modern-config-item">
                                            <label class="config-label modern-label">
                                                <i class="bi bi-clock me-2 text-success"></i>
                                                <span class="label-text">Prazo de Pagamento</span>
                                                <i class="bi bi-question-circle text-muted ms-1 config-help" 
                                                   data-bs-toggle="tooltip" 
                                                   title="Selecione o prazo de pagamento" 
                                                   data-poload="{{CONTAINER}}helper/terms/?clienteID={{clientePOID}}"></i>
                                            </label>
                                            <div class="config-input-wrapper">
                                                <select class="form-select select2-ajax modern-select config-select" 
                                                        data-recalculate="false" 
                                                        data-field="prazoPagamentoVezes" 
                                                        data-lead="{{id}}" 
                                                        data-ajax-update="{{CONTAINER}}service/update/" 
                                                        data-ajax--url="{{CONTAINER}}service/prazo/">
                                                    {{#Prazo}}<option value="{{PrazoTermos}}" selected="selected">{{PrazoTermos}}</option>{{/Prazo}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    {{/bearings}}
                                    
                                    <!-- Faturar Para Configuration -->
                                    {{#machines}}
                                    <div class="col-xl-3 col-lg-4 col-md-6">
                                        <div class="config-item modern-config-item">
                                            <label class="config-label modern-label">
                                                <i class="bi bi-people me-2 text-info"></i>
                                                <span class="label-text">Faturar Para</span>
                                            </label>
                                            <div class="config-input-wrapper">
                                                <select class="form-select select2-ajax modern-select config-select" 
                                                        data-field="clienteDoClientePOID" 
                                                        data-lead="{{id}}" 
                                                        data-ajax-update="{{CONTAINER}}service/update/" 
                                                        data-ajax--url="{{CONTAINER}}service/auto/cc_{{clientePOID}}/">
                                                    {{#ClienteDoCliente}}<option value="{{clienteNome}}" selected="selected">{{clienteNome}}</option>{{/ClienteDoCliente}}
                                                    {{^ClienteDoCliente}}<option value="{{Cliente.clienteNome}}" data-recalculate="true" selected="selected">{{Cliente.clienteNome}}</option>{{/ClienteDoCliente}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    {{/machines}}
                                    
                                    <!-- Operação Configuration -->
                                    {{#SESSION.acessoGerencial}}
                                    <div class="col-xl-3 col-lg-4 col-md-6">
                                        <div class="config-item modern-config-item">
                                            <label class="config-label modern-label">
                                                <i class="bi bi-diagram-3 me-2 text-warning"></i>
                                                <span class="label-text">Natureza da Operação</span>
                                                <small class="text-muted ms-1">(NOP)</small>
                                            </label>
                                            <div class="config-input-wrapper">
                                                <select class="form-select select2-ajax modern-select config-select" 
                                                        data-recalculate="true" 
                                                        data-field="naturezaOperacaoPOID" 
                                                        data-lead="{{id}}" 
                                                        data-ajax-update="{{CONTAINER}}service/update/" 
                                                        data-ajax--url="{{CONTAINER}}service/nop/">
                                                    {{#Natureza}}<option value="{{naturezaOperacao}}" selected="selected">{{naturezaOperacao}}</option>{{/Natureza}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    {{/SESSION.acessoGerencial}}
                                    
                                    {{^SESSION.acessoGerencial}}
                                    {{#machines}}
                                    <div class="col-xl-3 col-lg-4 col-md-6">
                                        <div class="config-item modern-config-item">
                                            <label class="config-label modern-label">
                                                <i class="bi bi-diagram-3 me-2 text-warning"></i>
                                                <span class="label-text">Natureza da Operação</span>
                                                <small class="text-muted ms-1">(NOP)</small>
                                            </label>
                                            <div class="config-input-wrapper">
                                                <select class="form-select select2-ajax modern-select config-select" 
                                                        data-recalculate="true" 
                                                        data-field="naturezaOperacaoPOID" 
                                                        data-lead="{{id}}" 
                                                        data-ajax-update="{{CONTAINER}}service/update/" 
                                                        data-ajax--url="{{CONTAINER}}service/nop/">
                                                    {{#Natureza}}<option value="{{naturezaOperacao}}" selected="selected">{{naturezaOperacao}}</option>{{/Natureza}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    {{/machines}}
                                    
                                    {{#parts}}
                                    <div class="col-xl-3 col-lg-4 col-md-6">
                                        <div class="config-item modern-config-item">
                                            <label class="config-label modern-label">
                                                <i class="bi bi-diagram-3 me-2 text-warning"></i>
                                                <span class="label-text">Natureza da Operação</span>
                                                <small class="text-muted ms-1">(NOP)</small>
                                            </label>
                                            <div class="config-input-wrapper">
                                                <select class="form-select select2-ajax modern-select config-select" 
                                                        data-recalculate="true" 
                                                        data-field="naturezaOperacaoPOID" 
                                                        data-lead="{{id}}" 
                                                        data-ajax-update="{{CONTAINER}}service/update/" 
                                                        data-ajax--url="{{CONTAINER}}service/nop/">
                                                    {{#Natureza}}<option value="{{naturezaOperacao}}" selected="selected">{{naturezaOperacao}}</option>{{/Natureza}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    {{/parts}}
                                    {{/SESSION.acessoGerencial}}
                                    
                                    <!-- Authorization Configuration -->
                                    {{#SESSION.acessoGerencial}}
                                    <div class="col-xl-3 col-lg-4 col-md-6">
                                        <div class="config-item modern-config-item">
                                            <label class="config-label modern-label">
                                                <i class="bi bi-shield me-2 text-danger"></i>
                                                <span class="label-text">Autorizado</span>
                                                <i class="bi bi-question-circle text-muted ms-1 config-help" 
                                                   data-bs-toggle="tooltip" 
                                                   title="Se o Lead for autorizado pela gerência não haverá checagem de 'Lead Vencido' na hora de emissão do pedido. Para Autorizar o Lead coloque 1."></i>
                                            </label>
                                            <div class="config-input-wrapper">
                                                <input class="form-control modern-input config-input update" 
                                                       data-url="/leads/leads5/lead/update/Leads/{{id}}" 
                                                       name="leadAutorizado" 
                                                       id="leadAutorizado" 
                                                       value="{{leadAutorizado}}" 
                                                       type="number" 
                                                       min="0" 
                                                       max="1"
                                                       placeholder="0 ou 1">
                                            </div>
                                        </div>
                                    </div>
                                    {{/SESSION.acessoGerencial}}
                                </div>
                            </div>
                        </div>
                            </div>
                        </section>
                    </div>
                    
                    <div class="col-lg-4 col-md-12 product-search-section d-none">
                        <section class="search-section h-100">
                            <div class="modern-card config-section search-section h-100">
                        <div class="config-header bg-success bg-opacity-10">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="config-icon-wrapper me-3">
                                        <i class="bi bi-search"></i>
                                    </div>
                                    <div>
                                        <h4 class="config-title mb-1">Busca de Produtos</h4>
                                        <p class="config-subtitle mb-0">Encontre produtos por código ou descrição</p>
                                    </div>
                                </div>
                                <a class="btn btn-outline-success btn-sm" 
                                   data-bs-toggle="collapse" 
                                   href="#searchCollapse" 
                                   role="button" 
                                   aria-expanded="false" 
                                   aria-controls="searchCollapse">
                                    <i class="bi bi-chevron-down me-1"></i>
                                    <span class="toggle-text">Mostrar</span>
                                </a>
                            </div>
                        </div>
                        <div class="collapse" id="searchCollapse">
                            <div class="config-body">
                    <div class="search-card">
                        <div class="search-body">
                            <!-- Search Input -->
                            <div class="search-input-group mb-4">
                                <label for="search" class="form-label fw-medium mb-2">Produto</label>
                                <div class="input-group modern-input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input autocomplete="off" 
                                           class="form-control search-input modern-input border-start-0" 
                                           value="{{query}}" 
                                           type="text" 
                                           name="query" 
                                           id="search" 
                                           data-service="{{CONTAINER}}lead/search/"
                                           data-url="{{CONTAINER}}/{{id}}/{{segmentoPOID}}" 
                                           data-lead="{{id}}" 
                                           data-page="{{page}}" 
                                           data-segment="{{segmentoPOID}}" 
                                           placeholder="Digite para buscar produtos...">
                                </div>
                            </div>
                            
                            <!-- Filter Options -->
                            <div class="row g-4">
                                <div class="col-lg-8">
                                    <div class="filter-group">
                                        <label class="filter-label fw-medium mb-3">
                                            <i class="bi bi-funnel me-2 text-primary"></i>
                                            Filtrar por Estoque:
                                        </label>
                                        <div class="filter-options">
                                            <div class="form-check form-check-inline modern-check">
                                                <input class="form-check-input searchStock" type="radio" name="searchStock" id="searchStock" value="total">
                                                <label class="form-check-label" for="searchStock">
                                                    <i class="bi bi-boxes me-1 text-success"></i>Com Estoque
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline modern-check">
                                                <input class="form-check-input searchStock" type="radio" name="searchStock" id="searchStock100" value="sem">
                                                <label class="form-check-label" for="searchStock100">
                                                    <i class="bi bi-box me-1 text-warning"></i>Sem Estoque
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline modern-check">
                                                <input class="form-check-input searchStock" type="radio" name="searchStock" id="searchStock1" value="1">
                                                <label class="form-check-label" for="searchStock1">
                                                    <i class="bi bi-geo-alt me-1 text-info"></i>SP-Matriz
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline modern-check">
                                                <input class="form-check-input searchStock" type="radio" name="searchStock" id="searchStock8" value="8">
                                                <label class="form-check-label" for="searchStock8">
                                                    <i class="bi bi-geo-alt me-1 text-info"></i>SP-BF
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline modern-check">
                                                <input class="form-check-input searchStock" type="radio" name="searchStock" id="searchStock6" value="6">
                                                <label class="form-check-label" for="searchStock6">
                                                    <i class="bi bi-geo-alt me-1 text-info"></i>SC
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline modern-check">
                                                <input class="form-check-input searchStock" type="radio" name="searchStock" id="searchStockNext" value="previsao">
                                                <label class="form-check-label" for="searchStockNext">
                                                    <i class="bi bi-clock me-1 text-secondary"></i>Com Previsão
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-lg-4">
                                    <div class="filter-group">
                                        <label class="filter-label fw-medium mb-3">
                                            <i class="bi bi-sort-down me-2 text-primary"></i>
                                            Ordenar por:
                                        </label>
                                        <div class="filter-options">
                                            <div class="form-check form-check-inline modern-check">
                                                <input class="form-check-input searchOrder" type="radio" name="searchOrder" id="searchOrder" value="estoqueTotal desc" checked>
                                                <label class="form-check-label" for="searchOrder">
                                                    <i class="bi bi-sort-numeric-down me-1 text-primary"></i>Estoque
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline modern-check">
                                                <input class="form-check-input searchOrder" type="radio" name="searchOrder" id="searchOrder1" value="modelo asc">
                                                <label class="form-check-label" for="searchOrder1">
                                                    <i class="bi bi-sort-alpha-down me-1 text-primary"></i>Código
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Search Results -->
                    <div class="search-results mt-4">
                        <div class="results-container modern-results" id="leadResult">
                            <div class="search-placeholder text-center py-5">
                                <i class="bi bi-search text-muted mb-3" style="font-size: 3rem;"></i>
                                <h5 class="text-muted">Digite algo para começar a busca</h5>
                                <p class="text-muted mb-0">Os resultados aparecerão aqui</p>
                            </div>
                        </div>
                    </div>
                        </div>
                        </div>
                             </div>
                         </section>
                     </div>
                 </div>
                <!-- DIFAL Alert -->
                {{#Cliente.clienteDifal}}
                <section class="difal-section mt-4">
                    <div class="modern-card config-section alert-card">
                        <div class="config-header bg-warning bg-opacity-10">
                            <div class="d-flex align-items-center">
                                <div class="config-icon-wrapper me-3 text-warning">
                                    <i class="bi bi-exclamation-triangle"></i>
                                </div>
                                <div>
                                    <h4 class="config-title mb-1 text-warning">Atenção - DIFAL</h4>
                                    <p class="config-subtitle mb-0 text-warning">Cliente com DIFAL ativo</p>
                                </div>
                            </div>
                        </div>
                        <div class="config-body">
                            <div class="alert-content p-3 bg-warning bg-opacity-5 rounded">
                                <p class="mb-0"><strong>Importante:</strong> Verificar se o produto é isento ou não de DIFAL antes de finalizar a cotação.</p>
                            </div>
                        </div>
                    </div>
                </section>
                {{/Cliente.clienteDifal}}
                
                <!-- Cart Section -->
                <section class="cart-section mt-2">
                    <div class="modern-card config-section cart-section" style="box-shadow: 0 12px 40px rgba(0,0,0,0.5); border: 1px solid #404040; background: #1a1a1a; border-radius: 12px; overflow: hidden;">
                        <div class="config-header" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); color: white; border-radius: 12px 12px 0 0; padding: 1.5rem; box-shadow: 0 4px 20px rgba(0,0,0,0.5); border: 1px solid #404040;">
                            <div class="d-flex align-items-center justify-content-between flex-wrap">
                                <div class="d-flex align-items-center">
                                    <div class="config-icon-wrapper me-3">
                                        <i class="fas fa-shopping-cart" style="color: white;"></i>
                                    </div>
                                    <div>
                                        <h4 class="config-title mb-1" style="color: white; font-size: 1.4rem; font-weight: 400;">Carrinho de Compras</h4>
                                        <p class="config-subtitle mb-0" style="color: white; font-weight: 300; opacity: 0.8;">Produtos selecionados para cotação</p>
                                    </div>
                                </div>
                                
                                <!-- Toggle Button for Lead Information Sections -->
                                <div class="lead-sections-toggle">
                                    <button type="button" class="btn btn-sm btn-outline-light" id="toggleLeadSections" title="Mostrar/Ocultar informações do lead" style="background: rgba(255,255,255,0.2); border: 2px solid rgba(255,255,255,0.4); color: white; font-weight: 600; padding: 0.5rem 1rem; border-radius: 8px; transition: all 0.3s ease; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
                                        <i class="bi bi-eye-slash me-1"></i>
                                        <span class="toggle-text">Mostrar Informações</span>
                                    </button>
                                </div>
                                
                                <!-- Lead Information from fixtop -->
                                <div class="lead-info-compact d-flex flex-wrap align-items-center gap-3">
                                    <!-- Lead Navigation -->
                                    <div class="lead-navigation d-flex align-items-center gap-2">
                                        <a href="/leads8/lead/index/{{previd}}/1" class="btn btn-sm" style="color: #87CEEB; border: 1px solid #87CEEB;" title="Lead Anterior">
                                            <i class="bi bi-arrow-left"></i>
                                        </a>
                                        <div class="lead-number">
                                            <span class="small" style="color: #B0B0B0;">Lead:</span>
