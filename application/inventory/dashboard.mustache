<script>
function exportarDados() {
    alert('Funcionalidade de exportação será implementada em breve!');
}

// Auto-refresh a cada 5 minutos
setInterval(() => {
    window.location.reload();
}, 300000);

// Calcular resumos dos segmentos
function calcularResumoSegmentos() {
    let giroBom = 0, giroAtencao = 0, giroCritico = 0;
    
    {{#segmentos_giro.segmentos}}
    const valor = parseFloat({{valor_total_segmento}}) || 0;
    if ({{ordem_segmento}} <= 3) {
        giroBom += valor;
    } else if ({{ordem_segmento}} <= 5) {
        giroAtencao += valor;
    } else {
        giroCritico += valor;
    }
    {{/segmentos_giro.segmentos}}
    
    // Atualizar elementos
    document.getElementById('valor-giro-bom').textContent = 
        'R$ ' + giroBom.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2});
    document.getElementById('valor-giro-atencao').textContent = 
        'R$ ' + giroAtencao.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2});
    document.getElementById('valor-giro-critico').textContent = 
        'R$ ' + giroCritico.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2});
}

// Calcular resumo das marcas
function calcularResumoMarcas() {
    let excelentes = 0, boas = 0, regulares = 0, atencao = 0;
    
    {{#totais_por_marca.marcas}}
    if ('{{status_marca}}' === 'Excelente') {
        excelentes++;
    } else if ('{{status_marca}}' === 'Bom') {
        boas++;
    } else if ('{{status_marca}}' === 'Regular') {
        regulares++;
    } else if ('{{status_marca}}' === 'Atenção') {
        atencao++;
    }
    {{/totais_por_marca.marcas}}
    
    // Atualizar elementos
    document.getElementById('marcas-excelentes').textContent = excelentes;
    document.getElementById('marcas-boas').textContent = boas;
    document.getElementById('marcas-regulares').textContent = regulares;
    document.getElementById('marcas-atencao').textContent = atencao;
}

// Animações de entrada
document.addEventListener('DOMContentLoaded', function() {
    // Calcular resumos
    calcularResumoSegmentos();
    calcularResumoMarcas();
    
    // Animações
    const cards = document.querySelectorAll('.rounded-xl');
    cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
            card.style.transition = 'all 0.5s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, index * 100);
    });
});
</script>