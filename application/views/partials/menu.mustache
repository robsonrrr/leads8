<div class="modern-sidebar">
    <div class="sidebar-content">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <div class="sidebar-brand">
                <i class="bi bi-gear text-primary me-2"></i>
                <span class="brand-text">Configurações</span>
            </div>
        </div>
        
        <!-- Logistics Section -->
        <div class="sidebar-section">
            <div class="section-header">
                <i class="bi bi-truck section-icon text-primary"></i>
                <h6 class="section-title">Logística</h6>
                <div class="section-badge">
                    <span class="badge bg-light text-dark">3 campos</span>
                </div>
            </div>
            
            <div class="section-body">
                <!-- Emitente (Hidden) -->
                <div class="form-group d-none">
                    <label class="form-label">
                        <i class="bi bi-building me-1"></i>
                        Emitente
                        <i class="bi bi-question-circle text-warning ms-1" data-poload="{{CONTAINER}}helper/unity/?clienteID={{clientePOID}}" data-bs-toggle="tooltip" title="Informações sobre emitente"></i>
                    </label>
                    <select class="form-select form-select-sm select2-ajax" data-recalculate="true" data-field="unidadeEmitentePOID" data-lead="{{id}}" data-ajax-update="{{CONTAINER}}service/update/" data-ajax--url="{{CONTAINER}}service/emit/">
                        {{#Emitente}}<option value="{{emitenteFantasia}}" selected="selected">{{emitenteFantasia}}</option>{{/Emitente}}
                    </select>
                </div>
                
                <!-- Transportadora -->
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-truck me-1 text-info"></i>
                        Coleta
                        <span class="label-required">*</span>
                        <i class="bi bi-question-circle text-warning ms-1 help-icon" 
                           data-poload="{{CONTAINER}}helper/transporter/?clienteID={{clientePOID}}" 
                           data-bs-toggle="tooltip" 
                           data-bs-placement="top"
                           title="Informações sobre transportadora"></i>
                    </label>
                    <div class="input-wrapper">
                        <select class="form-select modern-select select2-ajax" 
                                data-recalculate="false" 
                                data-field="transportadoraPOID" 
                                data-lead="{{id}}" 
                                data-ajax-update="{{CONTAINER}}service/update/" 
                                data-ajax--url="{{CONTAINER}}service/auto/transporter_{{Emitente.emitenteUF}}/">
                            {{#Transportadora}}<option value="{{transportadoraNome}}" selected="selected">{{transportadoraNome}} - {{transportadoraCidade}} - {{transportadoraEstado}}</option>{{/Transportadora}}
                        </select>
                        <div class="input-feedback"></div>
                    </div>
                    
                    <div class="mt-3">
                        <a href="#" class="btn btn-outline-primary btn-sm modern-btn-link" 
                           data-bs-toggle="modal" 
                           data-title="Simulador Correios" 
                           data-bs-target="#remoteModal"
                           data-remote="/crm/servicos/correio/simular?origem={{unidadeEmitentePOID}}&destino={{Cliente.clienteCep}}&peso={{Total.peso}}&valor={{Total.bruto}}">
                            <i class="bi bi-calculator me-2"></i>
                            Simulador Correio
                        </a>
                    </div>
                    
                    {{#distance}}
                    <div class="distance-info mt-3">
                        <div class="info-header">
                            <i class="bi bi-geo-alt me-2 text-success"></i>
                            <strong class="info-title">Distância do Cliente</strong>
                        </div>
                        <div class="distance-grid mt-2">
                            {{#distance_from_0370}}
                            <div class="distance-card">
                                <div class="distance-label">Loja</div>
                                <div class="distance-value">{{distance_from_0370}}</div>
                            </div>
                            {{/distance_from_0370}}
                            {{#distance_from_0885}}
                            <div class="distance-card">
                                <div class="distance-label">Barra Funda</div>
                                <div class="distance-value">{{distance_from_0885}}</div>
                            </div>
                            {{/distance_from_0885}}
                            {{#distance_from_0109}}
                            <div class="distance-card">
                                <div class="distance-label">Matriz</div>
                                <div class="distance-value">{{distance_from_0109}}</div>
                            </div>
                            {{/distance_from_0109}}
                            {{#distance_from_0613}}
                            <div class="distance-card">
                                <div class="distance-label">Blumenau</div>
                                <div class="distance-value">{{distance_from_0613}}</div>
                            </div>
                            {{/distance_from_0613}}
                        </div>
                    </div>
                    {{/distance}}
                </div>
                
                <!-- Tipo Frete -->
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-truck me-1 text-info"></i>
                        Tipo Frete
                        <span class="label-required">*</span>
                    </label>
                    <div class="input-wrapper">
                        <select class="form-select modern-select update" 
                                data-url="/leads/leads5/lead/update/Leads/{{id}}" 
                                name="tipoFrete">
                            <option value="1" {{#FOB}}selected="selected"{{/FOB}}>FOB (por conta do cliente)</option>
                            <option value="2" {{#CIF}}selected="selected"{{/CIF}}>CIF (conta da Rolemak)</option>
                        </select>
                        <div class="input-feedback"></div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Operations Section -->
        <div class="sidebar-section">
            <div class="section-header">
                <i class="bi bi-gear section-icon text-primary"></i>
                <h6 class="section-title">Operação</h6>
                <div class="section-badge">
                    <span class="badge bg-light text-dark">{{#machines}}3{{/machines}}{{^machines}}2{{/machines}} campos</span>
                </div>
            </div>
            
            <div class="section-body">
                <!-- Data Criado -->
                <div class="info-item modern-info-item">
                    <div class="info-header">
                        <i class="bi bi-calendar me-2 text-success"></i>
                        <span class="info-label">Data Criado</span>
                    </div>
                    <div class="info-content">
                        <div class="info-value">{{dataEmissaoFormatado}}</div>
                        <div class="info-meta">{{dataEmissaoDias}} dia(s) atrás</div>
                    </div>
                </div>
                
                <!-- Data Entrega -->
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-calendar-check me-1 text-info"></i>
                        Data p/ Entrega
                        <span class="label-required">*</span>
                    </label>
                    <div class="input-wrapper">
                        <input type="date" 
                               class="form-control modern-input update" 
                               data-url="/leads/leads5/lead/update/Leads/{{id}}" 
                               name="dataEntrega" 
                               value="{{dataEntregaFormatado}}" />
                        <div class="input-feedback"></div>
                    </div>
                </div>
                
                <!-- Natureza Operação (Machines only) -->
                {{#machines}}
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-diagram-3 me-1 text-info"></i>
                        Operação
                        <span class="label-badge">NOP</span>
                        <span class="label-required">*</span>
                    </label>
                    <div class="input-wrapper">
                        <select class="form-select modern-select select2-ajax" 
                                data-recalculate="true" 
                                data-field="naturezaOperacaoPOID" 
                                data-lead="{{id}}" 
                                data-ajax-update="{{CONTAINER}}service/update/" 
                                data-ajax--url="{{CONTAINER}}service/nop/">
                            {{#Natureza}}<option value="{{naturezaOperacao}}" selected="selected">{{naturezaOperacao}}</option>{{/Natureza}}
                        </select>
                        <div class="input-feedback"></div>
                    </div>
                </div>
                {{/machines}}
            </div>
        </div>
        
        <!-- Payment and Terms Section -->
        <div class="sidebar-section">
            <div class="section-header">
                <i class="bi bi-credit-card section-icon text-primary"></i>
                <h6 class="section-title">Prazo e Pagamento</h6>
                <div class="section-badge">
                    <span class="badge bg-light text-dark">{{#SESSION.acessoGerencial}}3{{/SESSION.acessoGerencial}}{{^SESSION.acessoGerencial}}2{{/SESSION.acessoGerencial}} campos</span>
                </div>
            </div>
            
            <div class="section-body">
                <!-- Pagamento -->
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-cash me-1 text-success"></i>
                        Pagamento
                        <span class="label-required">*</span>
                        <i class="bi bi-question-circle text-warning ms-1 help-icon" 
                           data-poload="{{CONTAINER}}helper/payment/?clienteID={{clientePOID}}" 
                           data-bs-toggle="tooltip" 
                           data-bs-placement="top"
                           title="Informações sobre pagamento"></i>
                    </label>
                    <div class="input-wrapper">
                        <select class="form-select modern-select select2-ajax" 
                                data-recalculate="true" 
                                data-field="tipoPagamentoPOID" 
                                data-lead="{{id}}" 
                                data-ajax-update="{{CONTAINER}}service/update/" 
                                data-ajax--url="{{CONTAINER}}service/fp/">
                            {{#TipoPagamento}}<option value="{{pagamentoDescricao}}" selected="selected">{{pagamentoDescricao}}</option>{{/TipoPagamento}}
                        </select>
                        <div class="input-feedback"></div>
                    </div>
                </div>
                
                <!-- Prazo -->
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-clock me-1 text-warning"></i>
                        Prazo
                        <span class="label-required">*</span>
                        <i class="bi bi-question-circle text-warning ms-1 help-icon"
                             data-poload="{{CONTAINER}}helper/terms/?clienteID={{clientePOID}}"
                             data-bs-toggle="tooltip" 
                            data-bs-placement="top"
                            title="Informações sobre prazo"></i>
                    </label>
                    <div class="input-wrapper">
                        <select class="form-select modern-select select2-ajax" 
                                data-recalculate="false" 
                                data-field="prazoPagamentoVezes" 
                                data-lead="{{id}}" 
                                data-ajax-update="{{CONTAINER}}service/update/" 
                                data-ajax--url="{{CONTAINER}}service/prazo/{{Lead.segmentoPOID}}">
                            {{#Prazo}}<option value="{{PrazoTermos}}" selected="selected">{{PrazoTermos}}</option>{{/Prazo}}
                        </select>
                        <div class="input-feedback"></div>
                    </div>
                </div>
                
                <!-- Vendedor (Management Access Only) -->
                {{#SESSION.acessoGerencial}}
                <div class="form-group management-only">
                    <label class="form-label modern-label">
                        <i class="bi bi-person me-1 text-primary"></i>
                        Vendedor
                        <span class="label-badge bg-primary">Gerencial</span>
                        <small class="text-muted ms-1" 
                               data-bs-toggle="tooltip" 
                               data-bs-placement="left" 
                               title="ID: {{Vendedor.id}}">ID: {{Vendedor.id}}</small>
                    </label>
                    <div class="input-wrapper">
                        <select class="form-select modern-select select2-ajax" 
                                data-recalculate="false" 
                                data-field="vendedorPOID" 
                                data-lead="{{id}}" 
                                data-ajax-update="{{CONTAINER}}service/update/" 
                                data-ajax--url="{{CONTAINER}}service/vd/">
                            <option value="{{Vendedor.UsuarioNomeCurto}}" selected="selected">{{Vendedor.UsuarioNomeCurto}}</option>
                        </select>
                        <div class="input-feedback"></div>
                    </div>
                </div>
                {{/SESSION.acessoGerencial}}
            </div>
        </div>
        
        <!-- Client Discount Section -->
        <div class="sidebar-section">
            <div class="section-header">
                <i class="bi bi-percent section-icon text-success"></i>
                <h6 class="section-title">Desconto Cliente</h6>
                <div class="section-badge">
                    <span class="badge bg-light text-dark">{{#SESSION.acessoGerencial}}2{{/SESSION.acessoGerencial}}{{^SESSION.acessoGerencial}}1{{/SESSION.acessoGerencial}} campo{{#SESSION.acessoGerencial}}s{{/SESSION.acessoGerencial}}</span>
                </div>
            </div>
            
            <div class="section-body">
                <!-- Desconto -->
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-tag me-1 text-success"></i>
                        Desconto
                        <span class="label-required">*</span>
                        <i class="bi bi-question-circle text-warning ms-1 help-icon"
                            data-poload="{{CONTAINER}}helper/discount/?clienteID={{clientePOID}}"
                            data-bs-toggle="tooltip" 
                           data-bs-placement="top"
                           title="Informações sobre desconto"></i>
                    </label>
                    <div class="input-wrapper">
                        <select class="form-select modern-select select2-ajax" 
                                data-recalculate="true" 
                                data-field="descontoPOID" 
                                data-lead="{{id}}" 
                                data-ajax-update="{{CONTAINER}}service/update/" 
                                data-ajax--url="{{CONTAINER}}service/dc/{{clientePOID}}">
                            {{#Desconto}}<option value="{{DescontoDescricao}}" selected="selected">{{DescontoDescricao}}</option>{{/Desconto}}
                        </select>
                        <div class="input-feedback"></div>
                    </div>
                </div>
                
                <!-- Desconto Adicional (Management Access Only) -->
                {{#SESSION.acessoGerencial}}
                <div class="form-group management-only">
                    <label class="form-label modern-label">
                        <i class="bi bi-plus-circle me-1 text-info"></i>
                        Desconto Adicional
                        <span class="label-badge bg-primary">Gerencial</span>
                        <small class="text-muted ms-1">(%)</small>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-group">
                            <input type="number" 
                                   class="form-control modern-input" 
                                   data-recalculate="true" 
                                   data-field="descontoAdicional" 
                                   data-lead="{{id}}" 
                                   data-ajax-update="{{CONTAINER}}service/update/" 
                                   value="{{Lead.descontoAdicional}}" 
                                   min="0" 
                                   max="100" 
                                   step="0.01" 
                                   placeholder="0.00">
                            <span class="input-group-text">%</span>
                        </div>
                        <div class="input-feedback"></div>
                    </div>
                </div>
                {{/SESSION.acessoGerencial}}
                
                <!-- Client Discount Information -->
                {{#Cliente}}
                <div class="discount-grid mt-3">
                    <div class="discount-item">
                        <div class="discount-label">
                            <i class="bi bi-tag me-1"></i>
                            Desconto Base
                        </div>
                        <div class="discount-value">{{clienteDesconto}}%</div>
                    </div>
                    
                    <div class="discount-item">
                        <div class="discount-label">
                            <i class="bi bi-car-front me-1"></i>
                            Desconto Autopeças
                        </div>
                        <div class="discount-value">{{clienteDescontoMakAutomotive}}%</div>
                    </div>
                    
                    <div class="discount-item">
                        <div class="discount-label">
                            <i class="bi bi-plus-circle me-1"></i>
                            Sobretaxa
                        </div>
                        <div class="discount-value">{{clienteSobretaxa}}%</div>
                    </div>
                    
                    <div class="discount-item">
                        <div class="discount-label">
                            <i class="bi bi-graph-up me-1"></i>
                            Juros
                        </div>
                        <div class="discount-value">{{clienteJuros}}</div>
                    </div>
                    
                    <div class="discount-item">
                        <div class="discount-label">
                            <i class="bi bi-receipt me-1"></i>
                            Desconto por Pedido
                        </div>
                        <div class="discount-value">{{clienteDescontoPedido}}</div>
                    </div>
                </div>
                {{/Cliente}}
            </div>
        </div>
        
        <!-- Fiscal Situation Section -->
        <div class="sidebar-section">
            <div class="section-header">
                <i class="bi bi-file-earmark-text section-icon text-info"></i>
                <h6 class="section-title">Situação Fiscal</h6>
                <div class="section-badge">
                    <span class="badge bg-light text-dark">2 campos</span>
                </div>
            </div>
            
            <div class="section-body">
                <!-- Situação Fiscal -->
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-receipt me-1 text-info"></i>
                        Situação Fiscal
                        <span class="label-required">*</span>
                        <i class="bi bi-question-circle text-warning ms-1 help-icon"
                             data-poload="{{CONTAINER}}helper/fiscal/?clienteID={{clientePOID}}"
                             data-bs-toggle="tooltip" 
                            data-bs-placement="top"
                            title="Informações sobre situação fiscal"></i>
                    </label>
                    <div class="input-wrapper">
                        <select class="form-select modern-select select2-ajax" 
                                data-recalculate="true" 
                                data-field="situacaoFiscalPOID" 
                                data-lead="{{id}}" 
                                data-ajax-update="{{CONTAINER}}service/update/" 
                                data-ajax--url="{{CONTAINER}}service/sf/">
                            {{#SituacaoFiscal}}<option value="{{situacaoFiscalDescricao}}" selected="selected">{{situacaoFiscalDescricao}}</option>{{/SituacaoFiscal}}
                        </select>
                        <div class="input-feedback"></div>
                    </div>
                </div>
                
                <!-- Observações -->
                <div class="form-group">
                    <label class="form-label modern-label">
                        <i class="bi bi-sticky me-1 text-secondary"></i>
                        Observações
                        <small class="text-muted ms-1">(Opcional)</small>
                    </label>
                    <div class="input-wrapper">
                        <textarea class="form-control modern-input" 
                                  data-recalculate="false" 
                                  data-field="observacoes" 
                                  data-lead="{{id}}" 
                                  data-ajax-update="{{CONTAINER}}service/update/" 
                                  rows="3" 
                                  placeholder="Adicione observações sobre o lead...">{{Lead.observacoes}}</textarea>
                        <div class="input-feedback"></div>
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Máximo 500 caracteres
                        </small>
                    </div>
                </div>
                
                {{#Cliente}}
                <div class="fiscal-grid mt-3">
                    <div class="fiscal-item">
                        <div class="fiscal-label">
                            <i class="bi bi-shield me-1"></i>
                            Isento ST
                        </div>
                        <div class="fiscal-value">{{clienteIsentoSt}}</div>
                    </div>
                    
                    <div class="fiscal-item">
                        <div class="fiscal-label">
                            <i class="bi bi-building me-1"></i>
                            Isento IPI
                        </div>
                        <div class="fiscal-value">{{clienteIsentoIPI}}</div>
                    </div>
                    
                    <div class="fiscal-item">
                        <div class="fiscal-label">
                            <i class="bi bi-person-badge me-1"></i>
                            Tipo Pessoa
                        </div>
                        <div class="fiscal-value">{{clienteTipoPessoa}}</div>
                    </div>
                    
                    <div class="fiscal-item">
                        <div class="fiscal-label">
                            <i class="bi bi-balance-scale me-1"></i>
                            Regime Fiscal
                        </div>
                        <div class="fiscal-value">{{clienteRegimeFiscal}}</div>
                    </div>
                    
                    <div class="fiscal-item">
                        <div class="fiscal-label">
                            <i class="bi bi-star me-1"></i>
                            ICMSST Especial
                        </div>
                        <div class="fiscal-value">{{clienteICMSSTEspecial}}</div>
                    </div>
                    
                    <div class="fiscal-item">
                        <div class="fiscal-label">
                            <i class="bi bi-map me-1"></i>
                            Suframa
                        </div>
                        <div class="fiscal-value">{{clienteSuframa}}</div>
                    </div>
                </div>
                {{/Cliente}}
            </div>
        </div>
    </div>
</div>