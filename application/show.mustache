        {{> partials/modal}}

        <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modals = {
                obsModal: document.getElementById('obsModal'),
                remoteModal: document.getElementById('remoteModal'),
                modalTicketAdd: document.getElementById('modalTicketAdd'),
                exampleModal: document.getElementById('exampleModal')
            };

            function showModal(modalId) {
                if (modals[modalId]) {
                    modals[modalId].classList.remove('hidden');
                }
            }

            function hideModal(modalId) {
                if (modals[modalId]) {
                    modals[modalId].classList.add('hidden');
                }
            }

            document.querySelectorAll('[data-toggle="modal"]').forEach(button => {
                button.addEventListener('click', function() {
                    const targetModalId = this.getAttribute('data-target').substring(1);
                    showModal(targetModalId);
                });
            });

            document.querySelectorAll('[data-dismiss="modal"]').forEach(button => {
                button.addEventListener('click', function() {
                    const modal = this.closest('.fixed.z-10.inset-0');
                    if (modal) {
                        modal.classList.add('hidden');
                    }
                });
            });

            // Função para controlar toggle das seções
            window.toggleSection = function(sectionId) {
                const content = document.getElementById(sectionId + '-content');
                const icon = document.getElementById(sectionId + '-icon');
                const text = document.getElementById(sectionId + '-text');
                
                if (content && icon && text) {
                    if (content.style.display === 'none') {
                        // Mostrar seção
                        content.style.display = 'block';
                        icon.className = 'fas fa-eye-slash';
                        text.textContent = 'Ocultar';
                    } else {
                        // Ocultar seção
                        content.style.display = 'none';
                        icon.className = 'fas fa-eye';
                        text.textContent = 'Mostrar';
                    }
                }
            };

            // Salvar estado das seções no localStorage
            function saveSectionState(sectionId, isVisible) {
                localStorage.setItem('section_' + sectionId, isVisible ? 'visible' : 'hidden');
            }

            // Carregar estado das seções do localStorage
            function loadSectionStates() {
                const sections = ['lead-info', 'cliente-info', 'produtos-controles'];
                sections.forEach(sectionId => {
                    const savedState = localStorage.getItem('section_' + sectionId);
                    if (savedState === 'hidden') {
                        const content = document.getElementById(sectionId + '-content');
                        const icon = document.getElementById(sectionId + '-icon');
                        const text = document.getElementById(sectionId + '-text');
                        
                        if (content && icon && text) {
                            content.style.display = 'none';
                            icon.className = 'fas fa-eye';
                            text.textContent = 'Mostrar';
                        }
                    }
                });
            }

            // Carregar estados salvos quando a página carrega
            loadSectionStates();
        });
        </script>
