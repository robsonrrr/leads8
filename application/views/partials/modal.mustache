<!-- Modern Import Products Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <i class="bi bi-download me-2"></i>
                    Importar Produtos
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="{{CONTAINER}}lead/import" method="get">
                <div class="modal-body modern-modal-body">
                    <div class="mb-3">
                        <label for="recipient-type" class="form-label">
                            <i class="bi bi-code me-1"></i>
                            Selecione de onde quer importar
                        </label>
                        <select class="form-select modern-select" id="recipient-type" name="type" required>
                            <option value="">Escolha uma opção...</option>
                            <option value="ecommerce">
                                <i class="bi bi-cart"></i> Ecommerce
                            </option>
                            <option value="lead">
                                <i class="bi bi-person-tie"></i> Lead
                            </option>
                            <option value="order">
                                <i class="bi bi-bag"></i> Pedido
                            </option>
                            <option value="quote">
                                <i class="bi bi-file-text"></i> Consulta
                            </option>
                            <option value="shipment">
                                <i class="bi bi-ship"></i> Importação
                            </option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="recipient-name" class="form-label">
                            <i class="bi bi-search me-1"></i>
                            Identificação
                        </label>
                        <input type="text" class="form-control modern-input" id="recipient-name" name="order" autocomplete="off" placeholder="Digite o número do pedido/lead/cotação ou nome do ecommerce" required>
                        <div class="form-text">
                            <small class="text-muted">
                                <strong>Número:</strong> Para Pedido, Lead ou Cotação | 
                                <strong>Nome:</strong> Para Ecommerce
                            </small>
                        </div>
                        <input type="hidden" id="lead" name="lead" value="{{id}}">
                        <input type="hidden" id="segmentoPOID" name="segmentoPOID" value="{{segmentoPOID}}">
                        <input type="hidden" id="customer" name="customer" value="{{clientePOID}}">
                    </div>
                </div>
                
                <div class="modal-footer modern-modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x me-1"></i>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-download me-1"></i>
                        Importar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>