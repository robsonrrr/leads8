<header class="modern-header fixed-top{{#pedidoPOID}} pedido-approved{{/pedidoPOID}}"{{#pedidoPOID}} style="background-color: #28a745 !important;"{{/pedidoPOID}}>
  <div class="container">
    <div class="header-content">
      <div class="lead-info">
        <div class="lead-number">
          <a href="/leads8/lead/index/{{previd}}/1" class="prev-lead-link" title="Lead Anterior">
            <i class="bi bi-arrow-left"></i>
          </a>
          <span class="label">Lead:</span>
          <a href="{{CONTAINER}}{{id}}/{{segmentoPOID}}" class="lead-link">#{{id}}</a>
          <a href="/leads8/lead/index/{{nextid}}/1" class="next-lead-link" title="Próximo Lead">
            <i class="bi bi-arrow-right"></i>
          </a>
        </div>
        
        <div class="lead-actions">
          <a href="{{CONTAINER}}{{id}}/{{segmentoPOID}}" target="_self" class="action-btn" title="Atualizar">
            <i class="bi bi-arrow-clockwise"></i>
          </a>
          <a href="{{CONTAINER}}{{id}}/{{segmentoPOID}}" target="_blank" class="action-btn" title="Abrir em nova aba">
            <i class="bi bi-box-arrow-up-right"></i>
          </a>
        </div>
        
        <div class="client-info">
          <span class="label">Cliente:</span>
          <a href="/agendor/?q={{Cliente.clienteID}}" target="_blank" class="client-link">{{Cliente.clienteNome}}
          {{#Cliente.clienteCidade}}<span class="client-location"> - {{Cliente.clienteCidade}}</span>{{/Cliente.clienteCidade}}{{#Cliente.clienteEstado}}<span class="client-location">, {{Cliente.clienteEstado}}</span>{{/Cliente.clienteEstado}}</a>
          <a href="#" class="btn btn-sm btn-outline-info ms-2" 
             onclick="new WinBox('Cliente Info', { url: '/K3/tip/vcustomer/{{Cliente.clienteID}}/', width: 1800, height: 1200, x: 'center', y: 'center' }); return false;"
             title="Ver informações do cliente">
            <i class="bi bi-info-circle"></i>
          </a>
        </div>
        
        {{#Vendedor.UsuarioNomeCurto}}
         <div class="seller-info" style="color: #888;">
           <span class="label">Vendedor:</span>
           <span class="seller-name">{{Vendedor.UsuarioNomeCurto}}</span>
         </div>
         {{/Vendedor.UsuarioNomeCurto}}       
      </div>
      
      {{#Financeiro}}
      <div class="financial-info">
        <div class="financial-item">
          <span class="label">Limite</span>
          <span class="financial-value positive">{{#limite}}R$ {{.}}{{/limite}}{{^limite}}R$ 0,00{{/limite}}</span>
        </div>
        <div class="financial-item">
          <span class="label">Disponível</span>
          <span class="financial-value positive">{{#disponivel}}R$ {{.}}{{/disponivel}}{{^disponivel}}R$ 0,00{{/disponivel}}</span>
        </div>
        <div class="financial-item">
          <span class="label">Montante 90d</span>
          <span class="financial-value positive">{{#montante}}{{.}}{{/montante}}{{^montante}}R$ 0,00{{/montante}}</span>
        </div>
        {{#atrasados}}
        {{#atrasados_gt_100}}
        <div class="financial-item warning">
          <span class="label">Atrasados</span>
          <span class="financial-value negative">R$ {{.}}</span>
        </div>
        {{/atrasados_gt_100}}
        {{/atrasados}}
        {{#pendentes}}
        <div class="financial-item">
          <span class="label">Pendentes</span>
          <span class="financial-value neutral">R$ {{.}}</span>
        </div>
        {{/pendentes}}
        {{#vale}}
        <div class="financial-item">
          <span class="label">Vale</span>
          <span class="financial-value negative">R$ {{.}}</span>
        </div>
        {{/vale}}
        {{#Recencia}}
        <div class="financial-item">
          <span class="label">Recência</span>
          <span class="financial-value neutral">{{.}} dias</span>
        </div>
        {{/Recencia}}
        {{#Frequencia}}
        <div class="financial-item">
          <span class="label">Frequência 90d</span>
          <span class="financial-value neutral">{{.}} pedidos</span>
        </div>
        {{/Frequencia}}
      </div>
      {{/Financeiro}}
      
      <div class="segment-selector">
        <select class="btn-segment" onchange="window.location.href='{{CONTAINER}}{{id}}/' + this.value">
          <option value="1" {{#segment_1}}selected{{/segment_1}}>Rolamentos</option>
          <option value="2" {{#segment_2}}selected{{/segment_2}}>Automotivo</option>
          <option value="3" {{#segment_3}}selected{{/segment_3}}>Máquinas</option>
          <option value="4" {{#segment_4}}selected{{/segment_4}}>Torneiras</option>
          <option value="5" {{#segment_5}}selected{{/segment_5}}>Peças</option>
          <option value="6" {{#segment_6}}selected{{/segment_6}}>Moto</option>
          <option value="7" {{#segment_7}}selected{{/segment_7}}>Geral</option>
        </select>
      </div>
    </div>
  </div>
</header>